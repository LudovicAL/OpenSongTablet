<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/bootUpFragment">

    <!-- The boot up fragment -->
    <fragment
        android:id="@+id/bootUpFragment"
        android:name="com.garethevans.church.opensongtablet.appdata.BootUpFragment"
        android:label="bootup_logo"
        tools:layout="@layout/bootup_logo">
        <action
            android:id="@+id/action_bootUpFragment_to_performanceFragment"
            app:destination="@id/performanceFragment" />
        <action
            android:id="@+id/action_bootUpFragment_to_presentationFragment"
            app:destination="@id/presentationFragment" />
        <action
            android:id="@+id/action_global_setStorageLocationFragment"
            app:destination="@id/setStorageLocationFragment"/>
    </fragment>


    <!-- The performance fragment -->
    <fragment
        android:id="@+id/performanceFragment"
        android:name="com.garethevans.church.opensongtablet.performance.PerformanceFragment"
        android:label="fragment_performance"
        tools:layout="@layout/fragment_performance">
        <action
            android:id="@+id/action_performanceFragment_to_preferences_graph"
            app:destination="@id/preferences_graph" />
        <action
            android:id="@+id/action_performanceFragment_to_editsong_graph"
            app:destination="@id/editsong_graph" />
        <action
            android:id="@+id/action_performanceFragment_to_import_graph"
            app:destination="@id/import_graph" />
        <deepLink
            android:id="@+id/deepLink3"
            app:uri="opensongapp://performance" />
        <action
            android:id="@+id/action_performanceFragment_to_alertInfoDialogFragment"
            app:destination="@id/alertInfoDialogFragment" />
    </fragment>

    <!-- The presentation fragment -->
    <fragment
        android:id="@+id/presentationFragment"
        android:name="com.garethevans.church.opensongtablet.presentation.PresentationFragment"
        android:label="fragment_presentation"
        tools:layout="@layout/fragment_presentation">
        <action
            android:id="@+id/action_presentationFragment_to_preferences_graph"
            app:destination="@id/preferences_graph" />
        <action
            android:id="@+id/action_presentationFragment_to_editsong_graph"
            app:destination="@id/editsong_graph" />
        <action
            android:id="@+id/action_presentationFragment_to_import_graph"
            app:destination="@id/import_graph" />
        <deepLink
            android:id="@+id/deepLink4"
            app:uri="opensongapp://presentation" />
        <action
            android:id="@+id/action_presentationFragment_to_alertInfoDialogFragment"
            app:destination="@id/alertInfoDialogFragment" />
    </fragment>

    <!-- The preferences graph -->
    <navigation
        android:id="@+id/preferences_graph"
        app:startDestination="@id/preferencesFragment">

        <!-- The main preferences fragment -->
        <fragment
            android:id="@+id/preferencesFragment"
            android:name="com.garethevans.church.opensongtablet.preferences.SettingsCategories"
            android:label="settings_categories"
            tools:layout="@layout/settings_categories">
            <action
                android:id="@+id/action_preferencesFragment_to_nearbyConnectionsFragment"
                app:destination="@id/nearbyConnectionsFragment" />
            <action
                android:id="@+id/action_preferencesFragment_to_CCLIDialogFragment"
                app:destination="@id/settingsCCLI" />
            <action
                android:id="@+id/action_preferencesFragment_to_storage_graph"
                app:destination="@id/storage_graph" />
            <action
                android:id="@+id/action_preferencesFragment_to_display_graph"
                app:destination="@id/display_graph" />
            <action
                android:id="@+id/action_preferencesFragment_to_midiFragment"
                app:destination="@id/midiFragment" />
            <action
                android:id="@+id/action_preferencesFragment_to_profileFragment"
                app:destination="@id/profileFragment" />
            <action
                android:id="@+id/action_preferencesFragment_to_control_graph"
                app:destination="@id/control_graph" />
            <action
                android:id="@+id/action_preferencesFragment_to_about_graph"
                app:destination="@id/about_graph" />
        </fragment>

        <!-- The storage graph -->
        <navigation
            android:id="@+id/storage_graph"
            app:startDestination="@id/storageManagementFragment">

            <!-- The storage layout fragment -->
            <fragment
                android:id="@+id/storageManagementFragment"
                android:name="com.garethevans.church.opensongtablet.filemanagement.StorageManagementFragment"
                android:label="storage_folder_display"
                tools:layout="@layout/storage_folder_display">
                <action
                    android:id="@+id/action_storageManagementFragment_to_setStorageLocationFragment"
                    app:destination="@id/setStorageLocationFragment" />
                <action
                    android:id="@+id/action_storageManagementFragment_to_backupOSBFragment"
                    app:destination="@id/backupOSBFragment" />
                <action
                    android:id="@+id/action_storageManagementFragment_to_moveContentDialog"
                    app:destination="@id/moveContentFragment" />
            </fragment>

            <!-- Choose the storage fragment -->
            <fragment
                android:id="@+id/setStorageLocationFragment"
                android:name="com.garethevans.church.opensongtablet.filemanagement.SetStorageLocationFragment"
                android:label="fragment_setstoragelocation"
                tools:layout="@layout/fragment_setstoragelocation">
                <deepLink
                    android:id="@+id/deepLink"
                    app:uri="opensongapp://settings/storage/setstorage" />
            </fragment>

            <!-- Choose the storage fragment -->
            <fragment
                android:id="@+id/backupOSBFragment"
                android:name="com.garethevans.church.opensongtablet.backupandrestore.BackupOSBFragment"
                android:label="fragment_osbbackup"
                tools:layout="@layout/fragment_osbbackup" />

            <fragment
                android:id="@+id/moveContentFragment"
                android:name="com.garethevans.church.opensongtablet.filemanagement.MoveContentFragment"
                android:label="MoveContentDialog"
                tools:layout="@layout/storage_move"/>

        </navigation>

        <!-- Google Nearby -->
        <fragment
            android:id="@+id/nearbyConnectionsFragment"
            android:name="com.garethevans.church.opensongtablet.nearby.NearbyConnectionsFragment"
            android:label="settings_nearbyconnections"
            tools:layout="@layout/settings_nearbyconnections">
            <deepLink
                android:id="@+id/deepLink5"
                app:uri="opensongapp://settings/nearby" />
        </fragment>

        <!-- CCLI -->
        <fragment
            android:id="@+id/settingsCCLI"
            android:name="com.garethevans.church.opensongtablet.ccli.SettingsCCLI"
            android:label="settings_ccli"
            tools:layout="@layout/settings_ccli" />

        <!-- Display graph -->
        <navigation
            android:id="@+id/display_graph"
            app:startDestination="@+id/displayMenuFragment">

            <!-- Display fragment -->
            <fragment
                android:id="@+id/displayMenuFragment"
                android:name="com.garethevans.church.opensongtablet.screensetup.DisplayMenuFragment"
                android:label="settings_display"
                tools:layout="@layout/settings_display">
                <action
                    android:id="@+id/action_displayMenuFragment_to_themeSetupFragment"
                    app:destination="@id/themeSetupFragment" />
                <action
                    android:id="@+id/action_displayMenuFragment_to_fontSetupFragment"
                    app:destination="@id/fontSetupFragment" />
                <action
                    android:id="@+id/action_displayMenuFragment_to_actionBarSettingsFragment"
                    app:destination="@id/actionBarSettingsFragment" />
            </fragment>

            <!-- Theme fragment -->
            <fragment
                android:id="@+id/themeSetupFragment"
                android:name="com.garethevans.church.opensongtablet.screensetup.ThemeSetupFragment"
                android:label="settings_theme"
                tools:layout="@layout/settings_theme">
                <action
                    android:id="@+id/action_themeSetupFragment_to_chooseColorFragment"
                    app:destination="@id/chooseColorFragment" />
            </fragment>

            <!-- Colour chooser -->
            <fragment
                android:id="@+id/chooseColorFragment"
                android:name="com.garethevans.church.opensongtablet.screensetup.ChooseColorFragment"
                android:label="display_color_settings"
                tools:layout="@layout/display_color_settings" />

            <!-- Font chooser -->
            <fragment
                android:id="@+id/fontSetupFragment"
                android:name="com.garethevans.church.opensongtablet.screensetup.FontSetupFragment"
                android:label="settings_fonts"
                tools:layout="@layout/settings_fonts">
                <action
                    android:id="@+id/action_fontSetupFragment_to_fontSetupPreviewFragment"
                    app:destination="@id/fontSetupPreviewFragment" />
                <deepLink
                    android:id="@+id/deepLink7"
                    app:uri="opensongapp://settings/display/fonts" />
            </fragment>

            <!-- Font preview -->
            <fragment
                android:id="@+id/fontSetupPreviewFragment"
                android:name="com.garethevans.church.opensongtablet.screensetup.FontSetupPreviewFragment"
                android:label="settings_fonts_preview"
                tools:layout="@layout/settings_fonts_preview" />
            <fragment
                android:id="@+id/actionBarSettingsFragment"
                android:name="com.garethevans.church.opensongtablet.screensetup.ActionBarSettingsFragment"
                android:label="settings_actionbar"
                tools:layout="@layout/settings_actionbar"/>

        </navigation>

        <!-- Midi -->
        <fragment
            android:id="@+id/midiFragment"
            android:name="com.garethevans.church.opensongtablet.midi.MidiFragment"
            android:label="settings_midi"
            tools:layout="@layout/settings_midi" />

        <!-- Profiles -->
        <fragment
            android:id="@+id/profileFragment"
            android:name="com.garethevans.church.opensongtablet.preferences.ProfileFragment"
            android:label="settings_profiles"
            tools:layout="@layout/settings_profiles" />

        <!-- Controls graph -->
        <navigation
            android:id="@+id/control_graph"
            app:startDestination="@id/controlMenuFragment">

            <!-- Control options -->
            <fragment
                android:id="@+id/controlMenuFragment"
                android:name="com.garethevans.church.opensongtablet.controls.ControlMenuFragment"
                android:label="settings_control"
                tools:layout="@layout/settings_control">
                <action
                    android:id="@+id/action_controlMenuFragment_to_pedalsFragment"
                    app:destination="@id/pedalsFragment" />
            </fragment>

            <!-- Pedal settings -->
            <fragment
                android:id="@+id/pedalsFragment"
                android:name="com.garethevans.church.opensongtablet.controls.PedalsFragment"
                android:label="settings_pedal"
                tools:layout="@layout/settings_pedal" />

        </navigation>

        <!-- About graph -->
        <navigation
            android:id="@+id/about_graph"
            app:startDestination="@id/aboutAppFragment">

            <!-- About options -->
            <fragment
                android:id="@+id/aboutAppFragment"
                android:name="com.garethevans.church.opensongtablet.appdata.AboutAppFragment"
                android:label="settings_about"
                tools:layout="@layout/settings_about">
                <action
                    android:id="@+id/action_aboutAppFragment_to_languageFragment"
                    app:destination="@id/languageFragment" />
            </fragment>

            <!-- Language -->
            <fragment
                android:id="@+id/languageFragment"
                android:name="com.garethevans.church.opensongtablet.appdata.LanguageFragment"
                android:label="settings_language"
                tools:layout="@layout/settings_language" />

        </navigation>
        <deepLink
            android:id="@+id/deepLink2"
            app:uri="opensongapp://preferences" />

    </navigation>

    <!-- Edit song graph -->
    <navigation android:id="@+id/editsong_graph"
        app:startDestination="@id/editSongFragment">

        <!-- Edit Song Fragment (holder) ViewPager-->
        <fragment
            android:id="@+id/editSongFragment"
            android:name="com.garethevans.church.opensongtablet.songprocessing.EditSongFragment"
            android:label="EditSongFragment"
            tools:layout="@layout/fragment_edit_song">
            <action
                android:id="@+id/action_editSongFragment_to_editSongFragmentMain"
                app:destination="@id/editSongFragmentMain" />
            <action
                android:id="@+id/action_editSongFragment_to_editsongFeatures"
                app:destination="@id/editsongFeatures" />
            <action
                android:id="@+id/action_editSongFragment_to_editSongTags"
                app:destination="@id/editSongTags" />
        </fragment>

        <!-- The main song fields -->
        <fragment
            android:id="@+id/editSongFragmentMain"
            android:name="com.garethevans.church.opensongtablet.songprocessing.EditSongFragmentMain"
            android:label="fragment_edit_song_1"
            tools:layout="@layout/fragment_edit_song_1"/>

        <!-- The song features -->
        <fragment
            android:id="@+id/editsongFeatures"
            android:name="com.garethevans.church.opensongtablet.songprocessing.EditSongFragmentFeatures"
            android:label="fragment_edit_song_2"
            tools:layout="@layout/fragment_edit_song_2"/>

        <!-- The song tags -->
        <fragment
            android:id="@+id/editSongTags"
            android:name="com.garethevans.church.opensongtablet.songprocessing.EditSongFragmentTags"
            android:label="fragment_edit_song_3"
            tools:layout="@layout/fragment_edit_song_3"/>

    </navigation>

    <!-- Import options -->
    <navigation android:id="@+id/import_graph"
        app:startDestination="@id/importOptionsFragment">

        <!-- The import options fragment -->
        <fragment
            android:id="@+id/importOptionsFragment"
            android:name="com.garethevans.church.opensongtablet.importsongs.ImportOptionsFragment"
            android:label="settings_import"
            tools:layout="@layout/settings_import">
            <action
                android:id="@+id/action_importOptionsFragment_to_importOSBFragment"
                app:destination="@id/importOSBFragment" />
        </fragment>

        <!-- OSB Import -->
        <fragment
            android:id="@+id/importOSBFragment"
            android:name="com.garethevans.church.opensongtablet.backupandrestore.ImportOSBFragment"
            android:label="fragment_osbbackup"
            tools:layout="@layout/fragment_osbbackup"/>

    </navigation>
    <dialog
        android:id="@+id/alertInfoDialogFragment"
        android:name="com.garethevans.church.opensongtablet.appdata.AlertInfoDialogFragment"
        android:label="@string/information">
        <deepLink
            android:id="@+id/deepLink6"
            app:uri="opensongapp://information" />
    </dialog>

</navigation>