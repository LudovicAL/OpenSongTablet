<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_boot">

    <fragment
        android:id="@+id/nav_boot"
        android:name="com.garethevans.church.opensongtablet.bootup.BootUpFragment"
        android:label="@string/app_name"
        tools:layout="@layout/bootup_logo">
        <action
            android:id="@+id/action_nav_boot_to_nav_performance"
            app:destination="@id/nav_performance" />
        <action
            android:id="@+id/action_nav_boot_to_nav_storage"
            app:destination="@id/nav_storage" />
    </fragment>

    <fragment
        android:id="@+id/nav_performance"
        android:name="com.garethevans.church.opensongtablet.performance.PerformanceFragment"
        android:label="@string/performancemode"
        tools:layout="@layout/fragment_performance" >

        <action
            android:id="@+id/action_nav_performance_to_nav_preference"
            app:destination="@id/nav_preference" />
        <action
            android:id="@+id/action_nav_performance_to_editSong"
            app:destination="@id/nav_editSong" />
        <action
            android:id="@+id/action_nav_performance_to_storageManagementFragment"
            app:destination="@id/nav_storageManagement" />
    </fragment>
    <fragment
        android:id="@+id/nav_storage"
        android:name="com.garethevans.church.opensongtablet.filemanagement.SetStorageLocationFragment"
        android:label="SetStorageLocationFragment"
        tools:layout="@layout/fragment_setstoragelocation"/>
    <fragment
        android:id="@+id/songMenuFragment"
        android:name="com.garethevans.church.opensongtablet.songsandsets.SongMenuFragment"
        tools:layout="@layout/menu_songs"
        android:label="SongMenuFragment" />

    <fragment
        android:id="@+id/nav_editSong"
        android:name="com.garethevans.church.opensongtablet.filemanagement.EditSongFragment"
        android:label="EditSongFragment"
        tools:layout="@layout/fragment_edit_song"/>

    <fragment
        android:id="@+id/nav_preference"
        android:name="com.garethevans.church.opensongtablet.preferences.SettingsCategories"
        android:label="@string/settings">
        <action
            android:id="@+id/action_nav_preference_to_nav_preference_ccli"
            app:destination="@id/nav_preference_ccli" />
    </fragment>

    <fragment
        android:id="@+id/nav_preference_ccli"
        android:name="com.garethevans.church.opensongtablet.ccli.SettingsCCLI"
        android:label="@string/edit_song_ccli"/>
    <fragment
        android:id="@+id/nav_storageManagement"
        android:name="com.garethevans.church.opensongtablet.filemanagement.StorageManagementFragment"
        android:label="StorageManagementFragment"
        tools:layout="@layout/storage_folder_display"/>


</navigation>