<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_boot">

    <fragment
        android:id="@+id/nav_boot"
        android:name="com.garethevans.church.opensongtablet.bootup.BootUpFragment"
        android:label="@string/app_name"
        tools:layout="@layout/bootup_logo">
        <action
            android:id="@+id/action_nav_boot_to_nav_performance"
            app:destination="@id/nav_performance" />
        <action
            android:id="@+id/action_nav_boot_to_nav_presentation"
            app:destination="@id/nav_presentation" />
    </fragment>

    <fragment
        android:id="@+id/nav_presentation"
        android:name="com.garethevans.church.opensongtablet.presentation.PresentationFragment"
        android:label="@string/presentermode"
        tools:layout="@layout/fragment_songlist">
        <action
            android:id="@+id/action_nav_presentation_to_nav_songlist"
            app:destination="@id/nav_songlist" />
    </fragment>

    <fragment
        android:id="@+id/nav_performance"
        android:name="com.garethevans.church.opensongtablet.performance.PerformanceFragment"
        android:label="@string/performancemode"
        tools:layout="@layout/fragment_presentation" >
        <action
            android:id="@+id/action_nav_performance_to_nav_songlist"
            app:destination="@id/nav_songlist" />
    </fragment>

    <fragment
        android:id="@+id/nav_songlist"
        android:name="com.garethevans.church.opensongtablet.songlist.SongListFragment"
        android:label="@string/song_list"
        tools:layout="@layout/fragment_songlist" >
        <action
            android:id="@+id/action_nav_songlist_to_nav_songlist_custom"
            app:destination="@id/nav_songlist_custom" />
    </fragment>

    <fragment
        android:id="@+id/nav_songlist_custom"
        android:name="com.garethevans.church.opensongtablet.songlist.CustomSearchFragment"
        android:label="@string/custom"
        tools:layout="@layout/fragment_songlist_custom" />

</navigation>