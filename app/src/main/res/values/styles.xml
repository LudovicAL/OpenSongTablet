<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomDialog" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">false</item>
        <item name="android:colorBackground">@color/toolbar</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="MyDialogHeadingText" parent="MyTheme.Base">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyHeadingText" parent="MyTheme.Base">
        <item name="android:textColor">#ff0</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyWhiteHeadingText" parent="MyTheme.Base">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyInfoText" parent="MyTheme.Base">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyEditText">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">#fff</item>
        <item name="android:textColorHint">#555</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="MyTextSwitch">
        <item name="android:textSize">14sp</item>
        <item name="android:thumb">@drawable/switch_button</item>
    </style>

    <style name="MySwitch">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MySpinner">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">#fff</item>
    </style>

    <style name="MyTheme" parent="MyTheme.Base">
        <item name="colorPrimary">@color/toolbar</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/toolbar</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/accent</item>
        <!-- You can also set colorControlNormal, colorControlActivated
            colorControlHighlight and colorSwitchThumbNormal. -->
        <item name="android:dialogTheme">@style/CustomDialog</item>
        <item name="colorControlActivated">@color/accent</item>

    </style>
    <!-- Base theme applied no matter what API -->

    <style name="MyTheme.Base" parent="Theme.AppCompat.NoActionBar">

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/toolbar</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/toolbar</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/accent</item>
        <!-- You can also set colorControlNormal, colorControlActivated
            colorControlHighlight and colorSwitchThumbNormal. -->
        <item name="android:dialogTheme">@style/CustomDialog</item>
        <item name="colorControlActivated">@color/accent</item>

    </style>

    <style name="SwitchStyle">
        <item name="colorControlActivated">@color/accent</item>
    </style>

    <style name="ThemeOverlay.OpenSongApp" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">@color/toolbar</item>
        <item name="android:textColor">@color/text</item>
    </style>
</resources>