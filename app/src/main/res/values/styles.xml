    <style name="CustomDialog" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">false</item>
        <item name="android:colorBackground">@color/toolbar</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textColor">#fff</item>
    </style>


    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">#fff</item>
        <item name="android:textColorHint">#fff</item>
        <item name="android:background">#000</item>
    </style>

