    <style name="MyEditText">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">#fff</item>
        <item name="android:textColorHint">#555</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="CustomMediaRouterTheme" parent="Theme.MediaRouter">
        <item name="android:background">@color/popupcolor</item>
    </style>

    <style name="MyTextSwitch">
        <item name="android:textSize">14sp</item>
        <item name="android:thumb">@drawable/switch_button</item>
    </style>

    <style name="MySwitch">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MySpinner">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">#fff</item>
        <item name="android:spinnerMode">dialog</item>
    </style>



    <style name="SwitchStyle">
        <item name="colorControlActivated">@color/accent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ThemeOverlay.OpenSongApp" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">@color/toolbar</item>
        <item name="android:textColor">@color/text</item>
    </style>

   <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
