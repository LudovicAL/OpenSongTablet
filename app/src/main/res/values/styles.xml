    <style name="setItem" parent="@style/Widget.MaterialComponents.CardView">
        <item name="contentPadding">2dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/primaryDark</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="menuTabs" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/colorSecondary</item>
        <item name="tabIndicatorHeight">8dp</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIconTint">@color/white</item>
        <item name="tabPadding">0dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
    </style>

    <style name="menuToggle" parent="Widget.MaterialComponents.MaterialButtonToggleGroup">
        <item name="singleSelection">true</item>
    </style>

    <style name="IconOnlyButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/white</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="IconTextButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/white</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">0dp</item>
    </style>


    <style name="MyWhiteHeadingText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MySongTitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MySongAuthorText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyHeadingText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="MyMenuHeadingText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="MyVersionText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyDialogHeadingText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="MyInfoText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <!--STUFF FOR FRAGMENTS-->
    <style name="backFragHeading">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/vlightgrey</item>
    </style>
    <style name="currFragHeading">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--SONG LIST-->
    <style name="songTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="drawableTint">@color/black</item>
    </style>
    <style name="songInfo">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="drawableTint">@color/black</item>
    </style>
    <style name="songCounter">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation" tools:targetApi="lollipop">16dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="backgroundTint">@color/secPrimary</item>
        <item name="android:background">@drawable/count_icon</item>

    </style>

    <!--DEFAULT VIEWS-->
    <style name="pageButton">
        <item name="backgroundTint">@color/mainSecondary</item>
        <item name="drawableTint">@color/white</item>
        <item name="useCompatPadding">true</item>
        <item name="borderWidth">0dp</item>
        <item name="fabSize">mini</item>
        <item name="android:alpha">0.4</item>
    </style>
<style name="newSpinner">
    <item name="android:layout_margin">8dp</item>
    <item name="android:padding">8dp</item>
</style>
    <style name="normalText">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="largeText">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="checkBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="newEditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
    </style>


    <!--NEW DRAWER-->
    <style name="DrawerLayout">
        <item name="android:listDivider">@color/secondary</item>
        <item name="itemBackground">@color/white</item>
        <item name="itemTextColor">@color/black</item>
        <item name="itemIconTint">@color/black</item>
        <item name="backgroundColor">@color/white</item>
        <item name="background">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="AppHeading">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppSubHeading">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CustomDialog" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">false</item>
        <item name="android:colorBackground">@color/toolbar</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textColor">#fff</item>
    </style>


    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">#fff</item>
        <item name="android:textColorHint">#fff</item>
        <item name="android:background">#000</item>
    </style>

