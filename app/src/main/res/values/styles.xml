<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- This is my main dark theme-->
    <!-- Set the main app theme-->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.NoActionBar"/>
    <style name="AppTheme" parent="Theme.MyApp">
        <!--Material color attributes (dark theme) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorError">#FF6666</item>
        <item name="colorOnError">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/lightgrey</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
        <item name="colorButtonNormal">@color/red</item>
        <item name="android:textSize">18sp</item>
        <item name="hintTextColor">@color/lightgrey</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>

        <!-- New MaterialComponents attributes. -->
        <item name="colorPrimaryVariant">@color/colorAltPrimary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="scrimBackground">@color/scrim</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.MaterialComponents.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MaterialComponents.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MaterialComponents.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MaterialComponents.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MaterialComponents.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MaterialComponents.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MaterialComponents.Overline</item>

    </style>

    <style name="AppTheme.ActionBar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:background">@color/colorAltPrimary</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="popupStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="backgroundColor">@color/colorAltPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--For the Preferences windows-->
    <style name="PrefScrollView" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="PrefSwitch" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="trackTint">@color/colorSecondary</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="PrefTextInputLayout" parent="AppTheme">
        <item name="helperTextTextColor">@color/lightgrey</item>
        <item name="boxStrokeColor">@color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundMode">none</item>
        <item name="android:background">@null</item>
    </style>

    <style name="PrefTextInputEditText" parent="AppTheme">
        <item name="android:background">@color/transparent</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="EditTextMultiLine" parent="PrefTextInputEditText">
        <item name="android:singleLine">false</item>
    </style>

    <style name="DividerLine" parent="AppTheme">
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/colorSecondary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!--For the song and set menu -->
    <style name="setItem" parent="@style/Widget.MaterialComponents.CardView">
        <item name="contentPadding">2dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/transparent</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="menuTabs" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/colorSecondary</item>
        <item name="tabIndicatorHeight">8dp</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIconTint">@color/white</item>
        <item name="tabPadding">0dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
    </style>

    <style name="menuToggle" parent="Widget.MaterialComponents.MaterialButtonToggleGroup">
        <item name="singleSelection">true</item>
    </style>



    <!-- General views -->

    <style name="MySwitch" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MySeekBar" parent="AppTheme">
        <item name="android:thumb">@drawable/thumbcontrol</item>
        <item name="elevation">80dp</item>
    </style>
    <style name="RadioButton" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="IconTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconGravity">start</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="iconTint">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Widget.MaterialComponents.BottomSheet">
        <!-- If this isn't overridden, the navigation bar at the bottom is ugly-->
        <!-- However, we have to manually set the scrim colour and touch cancel in the fragment-->
        <item name="android:windowIsFloating">false</item>
        <item name="expanded">true</item>
    </style>

    <style name="RoundedBox" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="IconOnlyButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/white</item>
        <item name="strokeColor">@color/colorSecondary</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="IconOnlyButtonNoOutline" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="DialogButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextOnlyButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorSecondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextBackgroundButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorSecondary</item>
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextButtonNoOutline" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="editTextLayoutOutline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">@color/lightgrey</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/lightgrey</item>
        <item name="colorAccent">@color/lightgrey</item>
    </style>

    <style name="editTextFieldOutline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">@color/lightgrey</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/lightgrey</item>
        <item name="colorAccent">@color/lightgrey</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="editTextLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">@color/lightgrey</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="colorAccent">@color/lightgrey</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="editTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="hintTextColor">@color/lightgrey</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="colorAccent">@color/lightgrey</item>
    </style>

    <style name="exposedDropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">@color/lightgrey</item>
        <item name="helperTextTextColor">@color/lightgrey</item>
        <item name="android:focusable">false</item>
        <item name="boxStrokeColor">@color/lightgrey</item>
        <item name="colorAccent">@color/lightgrey</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:dropDownHeight">200dp</item>

    </style>

    <style name="exposedDropDownItem" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:inputType">none</item>
        <item name="hintTextColor">@color/lightgrey</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:dropDownHeight">400dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="spinner" parent="AppTheme">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
        <item name="backgroundTint">@color/white</item>
    </style>






