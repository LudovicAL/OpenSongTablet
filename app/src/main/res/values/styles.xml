<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- Set the main app theme-->
    <style name="AppBaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar"/>
    <style name="AppTheme" parent="AppBaseTheme">
        <!--Material color attributes (dark theme) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorBackground">@color/darkBackground</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorError">#FF6666</item>
        <item name="colorOnError">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/lightgrey</item>
        <item name="colorButtonNormal">@color/red</item>
        <item name="android:textSize">18sp</item>
        <item name="hintTextColor">@color/lightSecondary</item>
        <item name="android:popupMenuStyle">@style/popupStyle</item>
    </style>

    <!--For the Preferences windows-->
    <style name="PrefScrollView" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="PrefSwitch" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="trackTint">@color/colorSecondary</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="PrefTextInputLayout">
        <item name="helperTextTextColor">@color/lightgrey</item>
        <item name="boxStrokeColor">@color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundMode">none</item>
        <item name="android:background">@null</item>
    </style>

    <style name="PrefTextInputEditText">
        <item name="android:background">@color/transparent</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="DividerLine">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="setItem" parent="@style/Widget.MaterialComponents.CardView">
        <item name="contentPadding">2dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/primaryDark</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="menuTabs" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/colorSecondary</item>
        <item name="tabIndicatorHeight">8dp</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIconTint">@color/white</item>
        <item name="tabPadding">0dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
    </style>

    <style name="menuToggle" parent="Widget.MaterialComponents.MaterialButtonToggleGroup">
        <item name="singleSelection">true</item>
    </style>



    <style name="MySwitch" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumb">@drawable/thumbcontrol</item>
        <item name="elevation">80dp</item>
    </style>
    <style name="RadioButton" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomSheetButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconGravity">start</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="iconTint">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Widget.Design.BottomSheet.Modal">
        <item name="backgroundTint">@color/secondary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="shapeAppearanceOverlay">@style/RoundedBox</item>
    </style>

    <style name="RoundedBox" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="IconOnlyButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/white</item>
        <item name="strokeColor">@color/lightgrey</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="DialogButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextOnlyButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/lightgrey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextButtonNoOutline" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="IconTextButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/white</item>
        <item name="strokeColor">@color/lightgrey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="editTextLayoutOutline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">@color/lightgrey</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/lightgrey</item>
        <item name="colorAccent">@color/lightgrey</item>
    </style>

    <style name="editTextFieldOutline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">@color/lightgrey</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/lightgrey</item>
        <item name="colorAccent">@color/lightgrey</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="editTextLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">@color/lightgrey</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="colorAccent">@color/lightgrey</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="editTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="hintTextColor">@color/lightgrey</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="colorAccent">@color/lightgrey</item>
    </style>

    <style name="exposedDropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">@color/lightgrey</item>
        <item name="helperTextTextColor">@color/lightgrey</item>
        <item name="android:focusable">false</item>
        <item name="boxStrokeColor">@color/lightgrey</item>
        <item name="colorAccent">@color/lightgrey</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidth">1dp</item>

    </style>

    <style name="exposedDropDownItem">
        <item name="android:textColor">@color/white</item>
        <item name="android:inputType">none</item>
        <item name="hintTextColor">@color/lightgrey</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:dropDownHeight">400dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
        <item name="backgroundTint">@color/white</item>
    </style>






    <!--// Maybe old layouts-->

    <style name="MyEditText">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">#fff</item>
        <item name="android:textColorHint">#555</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>


    <style name="MyWhiteHeadingText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MySongTitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MySongAuthorText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyHeadingText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="MyMenuHeadingText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="MyVersionText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyDialogHeadingText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="MyInfoText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <!--STUFF FOR FRAGMENTS-->
    <style name="backFragHeading">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/vlightgrey</item>
    </style>
    <style name="currFragHeading">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--SONG LIST-->
    <style name="songTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="drawableTint">@color/black</item>
    </style>
    <style name="songInfo">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="drawableTint">@color/black</item>
    </style>
    <style name="songCounter">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation" tools:targetApi="lollipop">16dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="backgroundTint">@color/secPrimary</item>
        <item name="android:background">@drawable/count_icon</item>

    </style>

    <!--DEFAULT VIEWS-->
    <style name="pageButton">
        <item name="backgroundTint">@color/mainSecondary</item>
        <item name="drawableTint">@color/white</item>
        <item name="useCompatPadding">true</item>
        <item name="borderWidth">0dp</item>
        <item name="fabSize">mini</item>
        <item name="android:alpha">0.4</item>
    </style>
