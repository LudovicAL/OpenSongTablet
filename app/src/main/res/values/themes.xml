<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- This is my main dark theme-->


    <style name="popupStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="backgroundColor">@color/colorSecondary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dividerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="songListButtonOn">
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:layout_margin">8dp</item>
        <item name="elevation">12dp</item>
    </style>
    <style name="songListButtonOff">
        <item name="backgroundTint">@color/darkSecondary</item>
        <item name="android:textColor">@color/lightSecondary</item>
        <item name="drawableTint">@color/lightSecondary</item>
        <item name="android:layout_margin">8dp</item>
        <item name="elevation">8dp</item>
    </style>


</resources>