<resources>

    <declare-styleable name="MaterialTextView">
        <attr name="android:text" format="string"/>
        <attr name="android:hint" format="string"/>
        <attr name="mydrawable" format="reference" />
        <attr name="showCheckMark" format="boolean"/>
        <attr name="showCheckBox" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MaterialEditText">
        <attr name="android:text"/>
        <attr name="android:hint"/>
        <attr name="android:digits"/>
        <attr name="android:lines"/>
        <attr name="android:minLines"/>
        <attr name="android:maxLines"/>
        <attr name="android:imeOptions"/>
        <attr name="android:inputType"/>
        <attr name="useMonospace" format="boolean"/>
        <attr name="android:saveEnabled"/>
        <attr name="endIconMode"/>
        <attr name="suffixText" />
        <attr name="helperText" />
        <attr name="android:layout_gravity" />
    </declare-styleable>

    <declare-styleable name="MaterialSlider">
        <attr name="android:text"/>
        <attr name="android:hint"/>
        <attr name="android:valueFrom"/>
        <attr name="android:valueTo"/>
        <attr name="stepSize" format="float"/>
        <attr name="android:value"/>
        <attr name="trackColor" format="color" />
        <attr name="trackHeight" format="dimension"/>
        <attr name="thumbColor" format="color"/>
        <attr name="thumbRadius" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="BottomSheetHandle">
        <attr name="isDraggableX" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="TextSlider">
        <attr name="textLeft" format="string"/>
        <attr name="textRight" format="string"/>
        <attr name="value" format="integer"/>
    </declare-styleable>

    <declare-styleable name="TextThreeSlider">
        <attr name="textL" format="string"/>
        <attr name="textC" format="string"/>
        <attr name="textR" format="string"/>
        <attr name="chosen" format="integer"/>
        <attr name="label" format="string"/>
    </declare-styleable>

    <declare-styleable name="DialogHeader">
        <attr name="android:text" format="string"/>
    </declare-styleable>

    <declare-styleable name="DialogTitleClose">
        <attr name="android:text" format="string"/>
    </declare-styleable>

    <declare-styleable name="ExposedDropDown">
        <attr name="android:text" format="string"/>
        <attr name="android:hint" format="string"/>
    </declare-styleable>
</resources>
