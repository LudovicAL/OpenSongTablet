<resources>

    <declare-styleable name="MaterialTextView">
        <attr name="android:text" format="string"/>
        <attr name="android:hint" format="string"/>
        <attr name="mydrawable" format="reference" />
        <attr name="showCheckMark" format="boolean"/>
        <attr name="showCheckBox" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MaterialEditText">
        <attr name="android:text" format="string"/>
        <attr name="android:hint" format="string"/>
        <attr name="android:digits" format="string"/>
        <attr name="android:singleLine" format="boolean"/>
        <attr name="android:minHeight" format="integer"/>
        <attr name="android:imeOptions" format="string"/>
        <attr name="android:inputType" format="string"/>
        <attr name="android:typeface" format="string"/>
    </declare-styleable>

    <declare-styleable name="MaterialSlider">
        <attr name="android:text"/>
        <attr name="android:hint"/>
        <attr name="android:valueFrom"/>
        <attr name="android:valueTo"/>
        <attr name="android:stepSize"/>
        <attr name="android:value"/>
    </declare-styleable>

    <declare-styleable name="DialogHeader">
        <attr name="android:text" format="string"/>
    </declare-styleable>

    <declare-styleable name="DialogTitleClose">
        <attr name="android:text" format="string"/>
    </declare-styleable>

    <declare-styleable name="ExposedDropDown">
        <attr name="android:text" format="string"/>
        <attr name="android:hint" format="string"/>
    </declare-styleable>
</resources>
