<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".filemanagement.AddSongsFragment"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <include android:id="@+id/fragmentheader"
            layout="@layout/fragment_header" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How would you like to add a new song?" />

                <View style="@style/dividerLine" />




                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Import song or backup from device"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download from UG or other"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/material_button"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Default Button"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/material_icon_button"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:iconGravity="start|textEnd"
                    android:text="Icon Button"
                    app:icon="@drawable/chevron_right"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/material_icon_text_button"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_margin="12dp"
                    android:text="Icon Text button"
                    app:iconGravity="start|textEnd"
                    android:background="@android:color/transparent"
                    app:icon="@drawable/chevron_right"/>

                <Button
                    android:id="@+id/material_icon_text_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/camera"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:gravity="start"
                    android:layout_margin="8dp"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    app:backgroundTint="@color/grey"
                    android:icon="@drawable/chevron_right"
                    app:iconGravity="start|textEnd"
                    app:iconTint="@color/mainSecondary"/>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>
