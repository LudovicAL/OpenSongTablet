<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_bg"
    android:padding="8dp">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instrument"
            android:textColor="#ff0"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/customchords_instrument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:textColor="#000"
            android:padding="8dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customchords_fret"
            android:layout_marginTop="12dp"
            android:textColor="#ff0"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/customchords_fret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:textColor="#000"
            android:padding="8dp"
            android:textSize="16sp" />


            <LinearLayout
                android:id="@+id/guitar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/fret0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/string6_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/customchords"
                        android:src="@drawable/string_top_x" />

                    <ImageView
                        android:id="@+id/string5_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/customchords"
                        android:src="@drawable/string_top_x" />

                    <ImageView
                        android:id="@+id/string4_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/customchords"
                        android:src="@drawable/string_top_x" />

                    <ImageView
                        android:id="@+id/string3_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/customchords"
                        android:src="@drawable/string_top_x" />

                    <ImageView
                        android:id="@+id/string2_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/customchords"
                        android:src="@drawable/string_top_x" />

                    <ImageView
                        android:id="@+id/string1_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/customchords"
                        android:src="@drawable/string_top_x" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fret1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/string6_f1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/customchords"
                        android:src="@drawable/string_6" />

                    <ImageView
                        android:id="@+id/string5_f1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/customchords"
                        android:src="@drawable/string_5" />

                    <ImageView
                        android:id="@+id/string4_f1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/customchords"
                        android:src="@drawable/string_4" />

                    <ImageView
                        android:id="@+id/string3_f1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/customchords"
                        android:src="@drawable/string_3" />

                    <ImageView
                        android:id="@+id/string2_f1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/customchords"
                        android:src="@drawable/string_2" />

                    <ImageView
                        android:id="@+id/string1_f1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/customchords"
                        android:src="@drawable/string_1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fret2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/string6_f2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/customchords"
                        android:src="@drawable/string_6" />

                    <ImageView
                        android:id="@+id/string5_f2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/customchords"
                        android:src="@drawable/string_5" />

                    <ImageView
                        android:id="@+id/string4_f2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/customchords"
                        android:src="@drawable/string_4" />

                    <ImageView
                        android:id="@+id/string3_f2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/customchords"
                        android:src="@drawable/string_3" />

                    <ImageView
                        android:id="@+id/string2_f2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/customchords"
                        android:src="@drawable/string_2" />

                    <ImageView
                        android:id="@+id/string1_f2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/customchords"
                        android:src="@drawable/string_1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fret3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/string6_f3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/customchords"
                        android:src="@drawable/string_6" />

                    <ImageView
                        android:id="@+id/string5_f3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/customchords"
                        android:src="@drawable/string_5" />

                    <ImageView
                        android:id="@+id/string4_f3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/customchords"
                        android:src="@drawable/string_4" />

                    <ImageView
                        android:id="@+id/string3_f3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/customchords"
                        android:src="@drawable/string_3" />

                    <ImageView
                        android:id="@+id/string2_f3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/customchords"
                        android:src="@drawable/string_2" />

                    <ImageView
                        android:id="@+id/string1_f3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/customchords"
                        android:src="@drawable/string_1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fret4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/string6_f4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/customchords"
                        android:src="@drawable/string_6" />

                    <ImageView
                        android:id="@+id/string5_f4"
                        android:layout_width="wrap_content"
