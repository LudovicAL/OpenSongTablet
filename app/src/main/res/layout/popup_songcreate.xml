<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/popup_bg"
    android:padding="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView5"
        android:layout_above="@+id/createSongOkButton"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/choosefolder"
                android:id="@+id/textView11"
                android:textColor="#ff0"
                android:layout_margin="8dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/newFolderSpinner"
                android:layout_margin="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView12"
                android:text="@string/rename"
                android:textColor="#ff0"
                android:layout_margin="8dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/newSongNameEditText"
                android:layout_margin="8dp"
                android:inputType="textAutoCorrect|text"
                android:maxLines="1"
                android:hint="@string/choosesongname"
                android:textColor="#000"
                android:textColorHint="#666"
                android:background="#fff"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:id="@+id/createSongCancelButton"
        android:background="@drawable/blue_button"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/createSongOkButton"
        android:layout_toStartOf="@+id/createSongOkButton"
        android:layout_margin="8dp"
        android:textColor="#fff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:id="@+id/createSongOkButton"
        android:background="@drawable/green_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:textColor="#fff" />

</RelativeLayout>