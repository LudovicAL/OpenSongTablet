<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <include layout="@layout/toolbar"
        android:id="@+id/mytoolbar"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lyrics_box"
        android:layout_below="@+id/mytoolbar"
        android:layout_above="@+id/selector_scrollview"
        android:layout_margin="4dp">

        <WebView
            android:id="@+id/mainwebview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp">
        </WebView>
    </FrameLayout>

    <HorizontalScrollView
        android:id="@+id/selector_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="8dp">
        <LinearLayout
            android:id="@+id/selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:layout_height="75dp"/>
        </LinearLayout>
    </HorizontalScrollView>

    <include layout="@layout/pageicons_bottom_material"
        android:id="@+id/pagebuttonsbottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>

    <ExpandableListView
        android:id="@+id/song_list_ex"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@drawable/drawer_bg"
        android:choiceMode="singleChoice"
        android:divider="#aaa"
        android:dividerHeight="1dp"
        android:padding="4dp"
        android:fastScrollEnabled="false"
        android:fastScrollAlwaysVisible="false"
        android:headerDividersEnabled="false" />

    <ExpandableListView
        android:id="@+id/option_list_ex"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@drawable/drawer_bg"
        android:choiceMode="singleChoice"
        android:divider="#aaa"
        android:dividerHeight="1dp"
        android:padding="4dp"
        android:fastScrollEnabled="false"
        android:fastScrollAlwaysVisible="false" />

</android.support.v4.widget.DrawerLayout>