<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".songlist.CustomSearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/currentSearchText"
        android:orientation="vertical">

        <include android:id="@+id/fragmentheader"
            layout="@layout/fragment_header" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/folderSwitch"
                    style="@style/checkBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/folder" />

                <TableLayout
                    android:id="@+id/folderTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TableRow>
                        <TextView
                            style="@style/normalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/available" />
                        <Spinner
                            android:id="@+id/folderSpinner"
                            style="@style/newSpinner"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />
                    </TableRow>

                    <View style="@style/dividerLine" />
                </TableLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/authorSwitch"
                    style="@style/checkBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_song_author" />

                <TableLayout
                    android:id="@+id/authorTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TableRow>

                        <TextView
                            style="@style/normalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/available" />

                        <Spinner
                            android:id="@+id/authorSpinner"
                            style="@style/newSpinner"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />
                    </TableRow>

                    <View style="@style/dividerLine" />
                </TableLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/keySwitch"
                    style="@style/checkBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_song_key" />

                <TableLayout
                    android:id="@+id/keyTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TableRow>

                        <TextView
                            style="@style/normalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/available" />

                        <Spinner
                            android:id="@+id/keySpinner"
                            style="@style/newSpinner"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />
                    </TableRow>

                    <View style="@style/dividerLine" />
                </TableLayout>


                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/themeSwitch"
                    style="@style/checkBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_song_theme" />

                <TableLayout
                    android:id="@+id/themeTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TableRow>

                        <TextView
                            style="@style/normalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/available" />

                        <Spinner
                            android:id="@+id/themeSpinner"
                            style="@style/newSpinner"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />
                    </TableRow>

                    <View style="@style/dividerLine" />
                </TableLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/otherSwitch"
                    style="@style/checkBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/other" />

                <TableLayout
                    android:id="@+id/otherTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/otherIncludes"
                        style="@style/normalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_song_user1" />

                    <TableRow>

                        <TextView
                            android:id="@+id/otherText"
                            style="@style/normalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/look_for" />

                        <EditText
                            android:id="@+id/otherValue"
                            style="@style/newEditText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/filter_by_this_value"
                            android:text="@string/filter_by_this_value"
                            android:imeOptions="actionSearch"
                            android:importantForAutofill="no"
                            android:inputType="textAutoCorrect" />
                    </TableRow>

                    <View style="@style/dividerLine" />
                </TableLayout>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

    <TextView
        android:id="@+id/currentSearchText"
        style="@style/newEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/doSearchButton"
        android:text="@string/search" />

    <Button
        android:id="@+id/doSearchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:text="@string/search" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

</RelativeLayout>