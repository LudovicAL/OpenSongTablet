<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/backgroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/glideImage"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/image" />

        <com.garethevans.church.opensongtablet.customviews.DrawNotes
            android:id="@+id/drawNotes"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:background="@color/transparent" />

        <FrameLayout
            android:id="@+id/dimBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:alpha="0.6"
            android:visibility="gone"/>

    </RelativeLayout>


    <!-- The bottom dialog -->
    <LinearLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="800dp">

        <ImageView
            android:id="@+id/handleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottomsheetbutton"
            android:padding="4dp"
            android:src="@drawable/ic_menu_white_36dp"
            android:contentDescription="@string/tool" />

        <LinearLayout
            style="@style/BottomSheetDialogTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tool" />

            <HorizontalScrollView
                android:id="@+id/myTools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/pencilFAB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="0dp"
                        android:contentDescription="@string/highlight"
                        android:src="@drawable/ic_pencil_white_36dp"
                        app:fabSize="mini"
                        app:useCompatPadding="true" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/highlighterFAB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="0dp"
                        android:contentDescription="@string/highlight"
                        android:src="@drawable/ic_highlighter_white_36dp"
                        app:fabSize="mini"
                        app:useCompatPadding="true" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/eraserFAB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="0dp"
                        android:contentDescription="@string/highlight"
                        android:src="@drawable/ic_eraser_white_36dp"
                        app:fabSize="mini"
                        app:useCompatPadding="true" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/undoFAB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="0dp"
                        android:contentDescription="@string/highlight"
                        android:src="@drawable/ic_undo_white_36dp"
                        app:fabSize="mini"
                        app:useCompatPadding="true" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/redoFAB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="0dp"
                        android:contentDescription="@string/highlight"
                        android:src="@drawable/ic_redo_white_36dp"
                        app:fabSize="mini"
                        app:useCompatPadding="true" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/deleteFAB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="0dp"
                        android:contentDescription="@string/highlight"
                        android:src="@drawable/ic_delete_white_36dp"
                        app:fabSize="mini"
                        app:useCompatPadding="true" />

                </LinearLayout>

            </HorizontalScrollView>

            <TableRow style="@style/DividerLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/size" />

                <LinearLayout
                    android:id="@+id/sizeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <SeekBar
                        android:id="@+id/sizeSeekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:max="49"
                        android:padding="16dp" />

                    <TextView
                        android:id="@+id/sizeText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="end"
                        android:text="@string/size" />

                </LinearLayout>

                <TableRow style="@style/DividerLine" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/colorsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/color_choose" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/color_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:contentDescription="@string/color_choose"
                            android:padding="0dp"
                            app:backgroundTint="@color/black"
                            app:fabSize="mini"
                            app:useCompatPadding="true" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/color_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:contentDescription="@string/color_choose"
                            android:padding="0dp"
                            app:backgroundTint="@color/white"
                            app:fabSize="mini"
                            app:useCompatPadding="true" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/color_yellow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:contentDescription="@string/color_choose"
                            android:padding="0dp"
                            app:backgroundTint="@color/yellow"
                            app:fabSize="mini"
                            app:useCompatPadding="true" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/color_red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:contentDescription="@string/color_choose"
                            android:padding="0dp"
                            app:backgroundTint="@color/red"
                            app:fabSize="mini"
                            app:useCompatPadding="true" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:contentDescription="@string/color_choose"
                            android:padding="0dp"
                            app:backgroundTint="@color/green"
                            app:fabSize="mini"
                            app:useCompatPadding="true" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/color_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:contentDescription="@string/color_choose"
                            android:padding="0dp"
                            app:backgroundTint="@color/blue"
                            app:fabSize="mini"
                            app:useCompatPadding="true" />

                    </LinearLayout>

                </HorizontalScrollView>

                <TableRow style="@style/DividerLine" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>