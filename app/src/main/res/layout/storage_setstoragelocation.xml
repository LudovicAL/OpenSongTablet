<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/headerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:text="@string/storage_choose"
        android:textSize="22sp"
        android:background="@color/colorAltPrimary"
        app:drawableStartCompat="@mipmap/ic_round_launcher"
        android:drawablePadding="12dp"
        android:layout_alignParentTop="true"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerText"
        android:layout_above="@+id/startApp">


    <LinearLayout
        android:id="@+id/page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/firstRun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/first_run" />

        <com.garethevans.church.opensongtablet.customviews.PrefEditTextView
            android:id="@+id/progressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            app:editTextVal="@string/current_location"
            app:hintTextVal="@string/current_location"/>








        <Button
            android:id="@+id/setStorage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:padding="12dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/storage_change"
            android:textColor="#fff"
            app:backgroundTint="@color/red" />

        <Button
            android:id="@+id/findStorage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="12dp"
            android:padding="12dp"
            android:text="@string/find_existing"
            android:textColor="#fff"
            app:backgroundTint="@color/darkyellow" />

        <TextView
            android:id="@+id/previousStorageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/no_previous_found"
            android:visibility="gone" />

        <TextView
            android:id="@+id/previousStorageHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/existing_found"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/previousStorageLocations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/section_box"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_margin="12dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/infoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="12dp"
            android:padding="12dp"
            android:text="@string/information"/>

        <LinearLayout
            android:id="@+id/extraInfoSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/storage_help"
                android:padding="12dp"/>

            <TextView
                android:id="@+id/storageInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="@string/storage_quicktip"/>
        </LinearLayout>


    </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/startApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="6dp"
        android:padding="12dp"
        android:text="@string/start"
        android:textColor="#fff"
        android:textSize="24sp"
        app:backgroundTint="@color/green"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>