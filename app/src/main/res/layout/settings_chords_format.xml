<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DefaultView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/displayChords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/show_chords"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/capoStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/capo_style" />

            <com.garethevans.church.opensongtablet.customviews.TextThreeSlider
                android:id="@+id/capoChords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:textL="@string/chords"
                app:textC="@string/capo"
                app:textR="@string/both"
                app:label="@string/chord_capo_display"/>
            <TableRow style="@style/DividerLine"/>

            <com.garethevans.church.opensongtablet.customviews.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/pref_key_text"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:text="@string/key" />

            <com.garethevans.church.opensongtablet.customviews.TextSlider
                android:id="@+id/sliderAb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textLeft="Ab"
                app:textRight="G#"
                app:value="0" />

            <com.garethevans.church.opensongtablet.customviews.TextSlider
                android:id="@+id/sliderBb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textLeft="Bb"
                app:textRight="A#"
                app:value="0" />

            <com.garethevans.church.opensongtablet.customviews.TextSlider
                android:id="@+id/sliderDb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textLeft="Db"
                app:textRight="C#"
                app:value="0" />

            <com.garethevans.church.opensongtablet.customviews.TextSlider
                android:id="@+id/sliderEb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textLeft="Eb"
                app:textRight="D#"
                app:value="0" />

            <com.garethevans.church.opensongtablet.customviews.TextSlider
                android:id="@+id/sliderGb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textLeft="Gb"
                app:textRight="F#"
                app:value="0" />

            <com.garethevans.church.opensongtablet.customviews.TextSlider
                android:id="@+id/sliderAbm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textLeft="Abm"
                app:textRight="G#m"
                app:value="1" />

            <com.garethevans.church.opensongtablet.customviews.TextSlider
                android:id="@+id/sliderBbm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textLeft="Bbm"
                app:textRight="A#m"
                app:value="0" />

            <com.garethevans.church.opensongtablet.customviews.TextSlider
                android:id="@+id/sliderDbm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textLeft="Dbm"
                app:textRight="C#m"
                app:value="1" />

            <com.garethevans.church.opensongtablet.customviews.TextSlider
                android:id="@+id/sliderEbm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textLeft="Ebm"
                app:textRight="D#m"
                app:value="0" />

            <com.garethevans.church.opensongtablet.customviews.TextSlider
                android:id="@+id/sliderGbm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textLeft="Gbm"
                app:textRight="F#m"
                app:value="1" />
            <TableRow style="@style/DividerLine" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/assumePreferred"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/chordformat_default" />

            <LinearLayout
                android:id="@+id/chordFormatLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.garethevans.church.opensongtablet.customviews.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/choosechordformat"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp"
                    android:text="@string/chord_format" />

                <RadioGroup
                    android:id="@+id/chordFormat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/chordFormat1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chordformat_1" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/chordFormat2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chordformat_2" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/chordFormat3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chordformat_3" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/chordFormat4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chordformat_4" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/chordFormat5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chordformat_5" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/chordFormat6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chordformat_6" />

                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>