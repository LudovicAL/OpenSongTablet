<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/songDisplayMenuTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_arrow_up_drop_circle_outline_yellow_36dp"
            android:gravity="center"
            android:text="@string/song_display"
            style="@style/MyMenuHeadingText" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/closeOptionsFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:fabSize="mini"
            android:src="@drawable/ic_close_white_36dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/menu_version_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MyVersionText"/>

    <ScrollView
        android:id="@+id/optionsbackupscrollview"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--
Chord settings - Choose chord format, Convert song to my preferred format, Capo information size, capo fret as numeral, show only native chords, show only capo chords, show native and capo chords
            Use presentation order
            Other display settings - Page buttons, extra info, hide menu bar
-->
            <Button
                android:id="@+id/songThemeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawableStart="@drawable/ic_theme_light_dark_white_36dp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="@string/choose_theme"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/songFontButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawableStart="@drawable/ic_format_text_white_36dp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="@string/choose_fonts"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/songAutoScaleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_arrow_expand_white_36dp"
                android:gravity="center_vertical"
                android:text="@string/autoscale_toggle"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/songLyricsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_format_align_left_white_36dp"
                android:gravity="center_vertical"
                android:text="@string/lyrics_settings"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/songChordsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_guitar_electric_white_36dp"
                android:gravity="center_vertical"
                android:text="@string/chord_settings"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/songPageButtonsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_bullseye_white_36dp"
                android:gravity="center_vertical"
                android:text="@string/pagebuttons"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/songOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_dots_horizontal_circle_white_36dp"
                android:gravity="center_vertical"
                android:text="@string/other"
                android:textColor="#fff"
                android:textSize="12sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>