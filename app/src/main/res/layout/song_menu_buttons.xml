<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/fragment_songlist">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3"
    android:baselineAligned="false">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/folderViewOff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/ic_folder_zip_white_36dp"
            android:text="@string/folder"
            style="@style/songListButtonOff"
            android:visibility="gone"/>
        <Button
            android:id="@+id/folderViewOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/ic_folder_zip_white_36dp"
            android:text="@string/folder"
            style="@style/songListButtonOn"/>

        <TextView
            android:id="@+id/folderCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            style="@style/songCounter"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/artistViewOff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/ic_microphone_variant_white_36dp"
            android:text="@string/edit_song_author"
            style="@style/songListButtonOff"
            android:visibility="gone"/>

        <Button
            android:id="@+id/artistViewOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/ic_microphone_variant_white_36dp"
            android:text="@string/edit_song_author"
            style="@style/songListButtonOn"/>
        <TextView
            android:id="@+id/authorCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            style="@style/songCounter"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/customViewOff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/ic_sort_white_36dp"
            android:text="@string/custom"
            style="@style/songListButtonOff"
            android:visibility="gone"/>
        <Button
            android:id="@+id/customViewOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/ic_sort_white_36dp"
            android:text="@string/custom"
            style="@style/songListButtonOn"/>
        <TextView
            android:id="@+id/customCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            style="@style/songCounter"/>

    </RelativeLayout>


</LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <TableRow android:id="@+id/spinnerRow"
             android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/normalText"
                android:text="@string/select"/>

            <Spinner
                android:id="@+id/searchSpinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/newSpinner"/>

        </TableRow>
        <TableRow android:id="@+id/customRow"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/normalText"
                android:text="@string/custom"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/searchText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/newEditText"/>
                <Button
                    android:id="@+id/changeCustom"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/edit"/>
            </LinearLayout>


        </TableRow>
        <TableRow android:id="@+id/filterRow"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/normalText"
                android:text="@string/filter_results"/>

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/newEditText"
                android:hint="@string/filter_by_this_value"
                android:textColorHint="@color/altSecondary"
                android:inputType="textAutoCorrect"
                android:imeOptions="actionSearch"
                android:importantForAutofill="no" />
        </TableRow>
    </TableLayout>

</LinearLayout>