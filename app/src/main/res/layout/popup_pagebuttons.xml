<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="0dp"
    android:orientation="vertical"
    android:background="@drawable/popup_bg"
    android:padding="8dp"
    android:visibility="visible">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/closebutton"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v7.widget.SwitchCompat
                app:showText="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pageButtonSize_Switch"
                android:layout_margin="8dp"
                android:checked="false"
                android:text="@string/size"
                android:textColor="#ff0"
                android:textOff="@string/size_mini"
                android:textOn="@string/size_normal"
                android:thumb="@drawable/switch_button"
                app:thumbTextPadding="4dp"
                app:thumbTint="#444488" />


            <android.support.v7.widget.SwitchCompat
                app:showText="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollArrows_Switch"
                android:layout_margin="8dp"
                android:checked="false"
                android:text="@string/scrollbuttons_toggle"
                android:textColor="#ff0"
                android:textOff="@string/scrollbuttons_single"
                android:textOn="@string/scrollbuttons_double"
                android:thumb="@drawable/switch_button"
                app:thumbTextPadding="4dp"
                app:thumbTint="#444488" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transparency"
                android:textColor="#ff0"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"/>
                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pageButtonTransparency_seekBar"
                    android:background="@drawable/apptheme_scrubber_primary_holo"
                    android:thumb="@drawable/apptheme_scrubber_control_normal_holo_bright"
                    android:progress="40"
                    android:max="100"
                    android:progressDrawable="@drawable/apptheme_scrubber_secondary_holo"
                    android:layout_margin="24dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:id="@+id/transparency_TextView"
                    android:textColor="#fff"/>












            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pagebuttons"
                android:textColor="#ff0"
                android:textSize="18sp"
                android:layout_marginTop="32dp"
                android:visibility="gone"/>
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pageButtons_seekBar"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/apptheme_scrubber_primary_holo"
                android:max="2"
                android:progress="1"
                android:progressDrawable="@drawable/apptheme_scrubber_secondary_holo"
                android:thumb="@drawable/apptheme_scrubber_control_normal_holo_bright"
                android:visibility="gone" />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/off"
                        android:layout_weight="0.333"
                        android:gravity="left"
                        android:textColor="#fff" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/bottom"
                        android:layout_weight="0.333"
                        android:gravity="center"
                        android:textColor="#fff" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/right"
                        android:layout_weight="0.333"
                        android:gravity="right"
                        android:textColor="#fff" />
                </TableRow>
            </TableLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/size"
                android:id="@+id/textView40"
                android:textColor="#ff0"
                android:textSize="18sp"
                android:layout_marginTop="32dp"
                android:visibility="gone"/>
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pageButtonScale_seekBar"
                android:background="@drawable/apptheme_scrubber_primary_holo"
                android:thumb="@drawable/apptheme_scrubber_control_normal_holo_bright"
                android:progress="0"
                android:max="5"
                android:progressDrawable="@drawable/apptheme_scrubber_secondary_holo"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone" />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/xsmall"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:textColor="#fff" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/xxlarge"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:textColor="#fff" />

                </TableRow>
            </TableLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scrollbuttons_toggle"
                android:id="@+id/textView52"
                android:textColor="#ff0"
                android:textSize="18sp"
                android:layout_marginTop="32dp"
                android:visibility="gone"/>
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollArrows_seekbar"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/apptheme_scrubber_primary_holo"
                android:max="1"
                android:progress="1"
                android:progressDrawable="@drawable/apptheme_scrubber_secondary_holo"
                android:thumb="@drawable/apptheme_scrubber_control_normal_holo_bright"
                android:visibility="gone"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/scrollbuttons_single"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:textColor="#fff" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/scrollbuttons_double"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:textColor="#fff" />
                </TableRow>
            </TableLayout>


        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/blue_button"
        android:text="@string/drawer_close"
        android:textColor="#fff"
        android:id="@+id/closebutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp" />

</RelativeLayout>