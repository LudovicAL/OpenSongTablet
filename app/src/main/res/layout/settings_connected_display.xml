<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DefaultView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/backgroundOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow style="@style/DividerLine" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/choose_background" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TableRow>

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="0.5"
                        android:background="@color/colorSecondary"
                        android:contentDescription="@string/choose_image2"
                        android:padding="12dp"
                        android:src="@drawable/ic_image_white_36dp" />

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="0.5"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@string/choose_image2"
                        android:padding="12dp"
                        android:src="@drawable/ic_image_white_36dp" />
                </TableRow>

                <TableRow android:paddingBottom="24dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center_horizontal"
                        android:text="@string/choose_image1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center_horizontal"
                        android:text="@string/choose_image2" />
                </TableRow>

                <TableRow>

                    <ImageView
                        android:id="@+id/video1"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="0.5"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@string/choose_video1"
                        android:padding="12dp"
                        android:src="@drawable/ic_image_white_36dp" />

                    <ImageView
                        android:id="@+id/video2"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="0.5"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@string/choose_video1"
                        android:padding="12dp"
                        android:src="@drawable/ic_image_white_36dp" />
                </TableRow>

                <TableRow android:paddingBottom="24dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center_horizontal"
                        android:text="@string/choose_video1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center_horizontal"
                        android:text="@string/choose_video2" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
