<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/popup_bg"
    android:padding="8dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/pageturn_instructions"
                style="@style/MyInfoText"
                android:layout_margin="8dp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/pageturn_set"
                style="@style/MyHeadingText"
                android:layout_margin="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/pedalPreviousButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:background="@drawable/green_button"
                android:padding="4dp"
                android:text="@string/pageturn_previous"
                android:textColor="#fff" />

            <Button
                android:id="@+id/pedalNextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:background="@drawable/green_button"
                android:padding="4dp"
                android:text="@string/pageturn_next"
                android:textColor="#fff" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/pedalToggleScrollBeforeSwipeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:theme="@style/SwitchStyle"
                style="@style/MyHeadingText"
                android:text="@string/toggleScrollBeforeSwipe"
                app:showText="false"/>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/pageturn_song"
                style="@style/MyHeadingText"
                android:layout_margin="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/pedalDownButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:background="@drawable/blue_button"
                android:padding="4dp"
                android:text="@string/pageturn_down"
                android:textColor="#fff" />

            <Button
                android:id="@+id/pedalUpButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:background="@drawable/blue_button"
                android:padding="4dp"
                android:text="@string/pageturn_up"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:text="@string/songactionsbuttons"
                style="@style/MyHeadingText"
                android:layout_margin="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/pedalPadButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:background="@drawable/green_button"
                android:padding="4dp"
                android:text="@string/padPedalText"
                android:textColor="#fff" />

            <Button
                android:id="@+id/pedalAutoScrollButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:background="@drawable/green_button"
                android:padding="4dp"
                android:text="@string/autoscrollPedalText"
                android:textColor="#fff" />

            <Button
                android:id="@+id/pedalMetronomeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:background="@drawable/green_button"
                android:padding="4dp"
                android:text="@string/metronomePedalText"
                android:textColor="#fff" />

        </LinearLayout>

</ScrollView>