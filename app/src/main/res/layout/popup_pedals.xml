                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    style="@style/MyInfoText"
                    android:text="@string/longpress"/>
                <Spinner
                    android:id="@+id/pedallong3choice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    style="@style/MySpinner"/>
                <Button
                    android:id="@+id/pedal3button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/green_button"
                    android:text="@string/footpedal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/section_box"
                android:layout_margin="4dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pedal4text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    style="@style/MyHeadingText"
                    android:text="Pedal 4"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    style="@style/MyInfoText"
                    android:text="@string/tap"/>
                <Spinner
                    android:id="@+id/pedal4choice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    style="@style/MySpinner"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    style="@style/MyInfoText"
                    android:text="@string/longpress"/>
                <Spinner
                    android:id="@+id/pedallong4choice"
