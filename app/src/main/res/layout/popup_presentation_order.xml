    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_song_presentation"
            android:id="@+id/popuppresorder_presorder_title"
            android:textColor="#ff0"
            android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/popuppres_mPresentation"
        android:textColor="#fff"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_below="@+id/popuppresorder_presorder_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
        android:layout_above="@+id/closeFragButton"
        android:layout_below="@+id/popuppres_mPresentation"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/popuppres_mPresentation"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/closeFragButton">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="@string/actions"
                android:id="@+id/textView2"
                android:textColor="#ff0" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/options_song_delete"
                android:id="@+id/deletePresOrder"
                android:layout_margin="12dp"
                android:background="@drawable/red_button"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="@string/song_sections"
                android:id="@+id/textView3"
                android:textColor="#ff0" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:id="@+id/songsectionstoadd"></LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/closeFragButton"
        android:enabled="true"
        android:background="@drawable/blue_button"
        android:textColor="#fff"
        android:text="@string/edit_save"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true" />


</RelativeLayout>