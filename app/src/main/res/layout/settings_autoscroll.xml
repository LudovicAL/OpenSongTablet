<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DefaultView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.garethevans.church.opensongtablet.customviews.NestedScrollWithFAB
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                style="@style/largeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/default_autoscroll" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.garethevans.church.opensongtablet.customviews.MaterialEditText
                    android:id="@+id/defaultDuration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:hint="@string/song_duration"
                    android:inputType="number"
                    app:suffixText="secs" />

                <com.garethevans.church.opensongtablet.customviews.MaterialEditText
                    android:id="@+id/defaultDelay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:hint="@string/autoscroll_time"
                    android:inputType="number"
                    app:suffixText="secs" />

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/autoscroll_default_or_prompt" />

            <RadioGroup
                android:id="@+id/autoscroll_defaults_RadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/autoscrollDefault"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/use_default" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/autoscrollPrompt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ask" />

            </RadioGroup>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/autostartAutoscroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/autoscroll_autostart" />

            <TableRow style="@style/DividerLine" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/largeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/actions_current_song" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.garethevans.church.opensongtablet.customviews.MaterialEditText
                    android:id="@+id/songDuration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:hint="@string/song_duration"
                    android:inputType="number"
                    app:suffixText="secs" />

                <com.garethevans.church.opensongtablet.customviews.MaterialEditText
                    android:id="@+id/songDelay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:hint="@string/autoscroll_time"
                    android:inputType="number"
                    app:suffixText="secs" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/linkAudio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/autoscroll_link_audio" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/learnAutoscroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/timer_learn" />
        </LinearLayout>
    </com.garethevans.church.opensongtablet.customviews.NestedScrollWithFAB>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/startStopAutoscroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_play_white_36dp"
        android:contentDescription="@string/start_stop_autoscroll" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>