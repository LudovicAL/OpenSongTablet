<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DefaultView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/autohideActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/actionbar_autohide" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/section_box"
            android:padding="0dp"
            android:orientation="vertical">

            <com.garethevans.church.opensongtablet.customviews.MaterialSlider
                android:id="@+id/titleTextSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/song_title"
                android:valueFrom="6"
                android:valueTo="22"
                app:stepSize="1"
                android:padding="8dp"/>

            <com.garethevans.church.opensongtablet.customviews.MaterialSlider
                android:id="@+id/authorTextSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/author"
                android:valueFrom="6"
                android:valueTo="22"
                app:stepSize="1"
                android:padding="8dp"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="@string/battery" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/section_box"
            android:padding="0dp"
            android:orientation="vertical">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/batteryDialOnOff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/image" />

            <com.garethevans.church.opensongtablet.customviews.MaterialSlider
                android:id="@+id/batteryDialSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/size"
                android:valueFrom="1"
                android:valueTo="8"
                app:stepSize="1"
                android:padding="8dp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/batteryTextOnOff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/text" />

            <com.garethevans.church.opensongtablet.customviews.MaterialSlider
                android:id="@+id/batteryTextSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/size"
                android:valueFrom="6"
                android:valueTo="16"
                app:stepSize="1"
                android:padding="8dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="@string/time" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/section_box"
            android:padding="0dp"
            android:orientation="vertical">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/clockTextOnOff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/text" />

            <LinearLayout
                android:id="@+id/timeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/clock24hrOnOff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="@string/time_format" />

                <com.garethevans.church.opensongtablet.customviews.MaterialSlider
                    android:id="@+id/timeTextSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/size"
                    android:valueFrom="6"
                    android:valueTo="16"
                    app:stepSize="1"
                    android:padding="8dp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>