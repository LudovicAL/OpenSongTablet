                        android:id="@+id/metronome_custom1"
                        android:layout_width="0dp"
                        android:layout_height="32dp"

                        android:layout_weight="0.18"
                        android:contentDescription="@string/colorchooser"
                        android:onClick="custom1_metronome_background"
                        android:layout_margin="4dp"
                        android:background="#444" />

                    <ImageView
                        android:id="@+id/metronome_custom2"
                        android:layout_width="0dp"
                        android:layout_height="32dp"

                        android:layout_weight="0.18"
                        android:contentDescription="@string/colorchooser"
                        android:onClick="custom2_metronome_background"
                        android:layout_margin="4dp"
                        android:background="#444" />
                </TableRow>
            </TableLayout>
        </ScrollView>

    </LinearLayout>

    <Button
        android:id="@+id/resetcolours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/red_button"
        android:onClick="resetColors"
        android:text="@string/reset_colours"
        android:textColor="#fff"
        android:layout_alignParentTop="false"
        android:layout_toLeftOf="@+id/closebutton"
        android:layout_toStartOf="@+id/closebutton"
        android:layout_margin="8dp"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/blue_button"
        android:text="@string/drawer_close"
        android:onClick="gotosongs"
        android:textColor="#fff"
        android:id="@+id/closebutton"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>