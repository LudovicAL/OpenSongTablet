<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <TableLayout
        style="@style/ButtonBarButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:collapseColumns="*"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="@string/chooselyricfont"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="@string/choosechordfont"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/lyrics_default_button"
                style="@style/ButtonBarButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/green_button"
                android:onClick="lyrics_default"
                android:padding="5dp"
                android:text="@string/font_default"
                android:textSize="14sp"
                android:typeface="normal" />

            <Button
                android:id="@+id/chords_default_button"
                style="@style/ButtonBarButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/blue_button"
                android:onClick="chords_default"
                android:padding="5dp"
                android:text="@string/font_default"
                android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/lyrics_monospace_button"
                style="@style/ButtonBarButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/green_button"
                android:onClick="lyrics_monospace"
                android:padding="5dp"
                android:text="@string/font_monospace"
                android:textSize="14sp" />

            <Button
                android:id="@+id/chords_monospace_button"
                style="@style/ButtonBarButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/blue_button"
                android:onClick="chords_monospace"
                android:padding="5dp"
                android:text="@string/font_monospace"
                android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/lyrics_sans_button"
                style="@style/ButtonBarButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/green_button"
                android:onClick="lyrics_sans"
                android:padding="5dp"
                android:text="@string/font_sans" />

            <Button
                android:id="@+id/chords_sans_button"
                style="@style/ButtonBarButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/blue_button"
                android:onClick="chords_sans"
                android:padding="5dp"
                android:text="@string/font_sans"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/lyrics_serif_button"
                style="@style/ButtonBarButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/green_button"
                android:onClick="lyrics_serif"
                android:padding="5dp"
                android:text="@string/font_serif"
                android:textSize="14sp" />

            <Button
                android:id="@+id/chords_serif_button"
                style="@style/ButtonBarButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/blue_button"
                android:onClick="chords_serif"
                android:padding="5dp"
                android:text="@string/font_serif"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/lyrics_firasanslight_button"
                style="@style/ButtonBarButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/green_button"
                android:onClick="lyrics_firasanslight"
                android:padding="5dp"
                android:text="@string/font_firasanslight"
                android:textSize="14sp" />

            <Button
                android:id="@+id/chords_firasanslight_button"
                style="@style/ButtonBarButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/blue_button"
                android:onClick="chords_firasanslight"
                android:padding="5dp"
                android:text="@string/font_firasanslight"
                android:textSize="14sp" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/lyrics_firasansregular_button"
                style="@style/ButtonBarButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/green_button"
                android:onClick="lyrics_firasansregular"
                android:padding="5dp"
                android:text="@string/font_firasansregular"
                android:textSize="14sp" />

            <Button
                android:id="@+id/chords_firasansregular_button"
                style="@style/ButtonBarButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/blue_button"
                android:onClick="chords_firasansregular"
                android:padding="5dp"
                android:text="@string/font_firasansregular"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/lyrics_kaushanscript_button"
                style="@style/ButtonBarButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/green_button"
                android:onClick="lyrics_kaushanscript"
                android:padding="5dp"
                android:text="@string/font_kaushanscript"
                android:textSize="14sp" />

            <Button
                android:id="@+id/chords_kaushanscript_button"
                style="@style/ButtonBarButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/blue_button"
                android:onClick="chords_kaushanscript"
                android:padding="5dp"
                android:text="@string/font_kaushanscript"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/lyrics_latolight_button"
                style="@style/ButtonBarButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/green_button"
                android:onClick="lyrics_latolight"
                android:padding="5dp"
                android:text="@string/font_latolight"
                android:textSize="14sp" />

            <Button
                android:id="@+id/chords_latolight_button"
                style="@style/ButtonBarButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/blue_button"
                android:onClick="chords_latolight"
                android:padding="5dp"
                android:text="@string/font_latolight"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/lyrics_latoregular_button"
                style="@style/ButtonBarButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/green_button"
                android:onClick="lyrics_latoregular"
                android:padding="5dp"
                android:text="@string/font_latoregular"
                android:textSize="14sp" />

            <Button
                android:id="@+id/chords_latoregular_button"
                style="@style/ButtonBarButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/blue_button"
                android:onClick="chords_latoregular"
                android:padding="5dp"
                android:text="@string/font_latoregular"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="40dp">

            <TextView
                android:id="@+id/font_chords_line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/font_chords_line1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/font_chords_line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/font_chords_line2"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/font_lyrics_line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:text="@string/font_lyrics_line1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/font_lyrics_line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:text="@string/font_lyrics_line2"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/linespacing"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp">

            <SeekBar
                android:id="@+id/linespacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="50" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="25dp">

            <TextView
                android:id="@+id/linespacingtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maxfontsize"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp">

            <SeekBar
                android:id="@+id/maxfontslider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="80" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="25dp">

            <TextView
                android:id="@+id/maxfontslidervalue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="25dp">

            <Button
                android:id="@+id/close"
                style="@style/ButtonBarButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_button"
                android:onClick="gotosongs"
                android:padding="8dp"
                android:text="@string/drawer_close" />

        </TableRow>


    </TableLayout>
</ScrollView>
