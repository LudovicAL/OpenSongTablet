<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".preferences.SettingsCategories"
    style="@style/PrefScrollView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.garethevans.church.opensongtablet.customviews.PrefTextLinkView
            android:id="@+id/visitWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:main="@string/website"
            app:sub="@string/website_address" />
        <TableRow style="@style/DividerLine" />

        <com.garethevans.church.opensongtablet.customviews.PrefTextLinkView
            android:id="@+id/latestVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:main="@string/latest_updates"
            app:sub="@string/app_name" />
        <TableRow style="@style/DividerLine" />

        <com.garethevans.church.opensongtablet.customviews.PrefTextLinkView
            android:id="@+id/manualButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:main="@string/user_guide"
            app:sub="@string/help" />
        <TableRow style="@style/DividerLine" />

        <com.garethevans.church.opensongtablet.customviews.PrefTextLinkView
            android:id="@+id/forumButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:main="@string/forum"
            app:sub="@string/forum_description" />
        <TableRow style="@style/DividerLine" />

        <com.garethevans.church.opensongtablet.customviews.PrefTextLinkView
            android:id="@+id/rateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:main="@string/rate"
            app:sub="@string/rate_description" />
        <TableRow style="@style/DividerLine" />

        <com.garethevans.church.opensongtablet.customviews.PrefTextLinkView
            android:id="@+id/languageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:main="@string/language"
            app:sub="@string/language" />
        <TableRow style="@style/DividerLine" />

        <com.garethevans.church.opensongtablet.customviews.PrefTextLinkView
            android:id="@+id/gitbubButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:main="@string/github"
            app:sub="@string/github_description" />
        <TableRow style="@style/DividerLine" />

        <com.garethevans.church.opensongtablet.customviews.PrefTextLinkView
            android:id="@+id/paypalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:main="@string/paypal"
            app:sub="@string/paypal_description" />
        <TableRow style="@style/DividerLine" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>