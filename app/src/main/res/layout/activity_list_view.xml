<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListViewAnimations"
    android:orientation="vertical">

    <TextView
        android:id="@+id/set_edit_title"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_edit_title"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:textColor="#ff0" />

        <TextView
        android:id="@+id/set_help"
        android:layout_below="@id/set_edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_help"
        android:gravity="center_horizontal"
        android:textSize="18sp" />
    
        <com.garethevans.church.opensongtablet.DynamicListView
            android:id="@+id/listview"
        android:layout_below="@id/set_help"
            android:background="#0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/set_save"
            android:onClick="doSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/green_button"
            android:text="@string/set_save" />

</RelativeLayout>
