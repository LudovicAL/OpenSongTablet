<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/FullscreenBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.garethevans.church.opensongtablet.customviews.DialogHeader
        android:id="@+id/dialogHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/transpose" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.garethevans.church.opensongtablet.customviews.MaterialSlider
                android:id="@+id/transposeSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@null"
                app:thumbRadius="24dp"
                app:trackHeight="8dp"
                android:valueFrom="-6"
                android:valueTo="6"
                app:trackColor="@color/colorSecondary"
                app:thumbColor="@color/colorAltSecondary"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/keyChangeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/key"
                android:textSize="24sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/assumePreferred"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chordformat_default"/>

            <LinearLayout
                android:id="@+id/chooseFormat_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/detectedChordFormatText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp"
                    android:text="@string/chord_format" />

                <RadioGroup
                    android:id="@+id/detectedChordFormat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="16dp">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/chordFormat1Radio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/chordformat_1" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/chordFormat2Radio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/chordformat_2" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/chordFormat3Radio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/chordformat_3" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/chordFormat4Radio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/chordformat_4" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/chordFormat5Radio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/chordformat_5" />

                    <RadioButton
                        android:id="@+id/chordFormat6Radio"
                        style="@style/RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/chordformat_6" />

                </RadioGroup>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/doTransposeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:padding="16dp"
                android:text="@string/transpose" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>