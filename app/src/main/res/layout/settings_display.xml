<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DefaultView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.garethevans.church.opensongtablet.customviews.MaterialTextView
                android:id="@+id/themeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/theme_edit"
                android:hint="@string/theme_dark" />
            <TableRow style="@style/DividerLine" />

            <com.garethevans.church.opensongtablet.customviews.MaterialTextView
                android:id="@+id/fontButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/font_choose"
                android:hint="@string/font_choose_description" />
            <TableRow style="@style/DividerLine" />

            <com.garethevans.church.opensongtablet.customviews.MaterialTextView
                android:id="@+id/scalingButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scaling"
                android:hint="@string/scaling_info" />
            <TableRow style="@style/DividerLine" />

            <com.garethevans.church.opensongtablet.customviews.MaterialTextView
                android:id="@+id/extraSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/song_display"
                android:hint="@string/extra_settings" />
            <TableRow style="@style/DividerLine" />

            <com.garethevans.church.opensongtablet.customviews.MaterialTextView
                android:id="@+id/connectedDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/connected_display"
                android:hint="@string/connected_display_description" />
            <TableRow style="@style/DividerLine" />

            <com.garethevans.church.opensongtablet.customviews.MaterialTextView
                android:id="@+id/actionBarSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/actionbar_display"
                android:hint="@string/actionbar_info" />
            <TableRow style="@style/DividerLine" />

            <com.garethevans.church.opensongtablet.customviews.MaterialTextView
                android:id="@+id/menuSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/menu_settings"
                android:hint="@string/menu_settings_description" />
            <TableRow style="@style/DividerLine" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
