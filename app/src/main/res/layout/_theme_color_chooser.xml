    <LinearLayout
        android:id="@+id/ambilwarna_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="0.33"
            android:layout_height="40dp" >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ambilwarna_alphacheckered_tiled" />

            <View
                android:id="@+id/oldColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#faa" />
        </FrameLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.34"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/ambilwarna_spacer"
            android:paddingRight="@dimen/ambilwarna_spacer"
            android:contentDescription="@string/colorchooser"
            android:src="@drawable/ic_arrow_right_white_36dp" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="0.33"
            android:layout_height="40dp" >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ambilwarna_alphacheckered_tiled" />

            <View
                android:id="@+id/newColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#aaf" />

        </FrameLayout>

    </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/hexColorBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hex color code"
            android:labelFor="@+id/hexColor"
            android:layout_margin="2dp"
            style="@style/editTextLayoutOutline">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/hexColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/editTextFieldOutline"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save" />

    </LinearLayout>


</androidx.core.widget.NestedScrollView>