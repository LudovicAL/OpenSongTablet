<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="400dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@drawable/lyrics_box">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/level_10"
                    android:background="@drawable/red_button"
                    android:contentDescription="@string/volume"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/level_9"
                    android:background="@drawable/red_button"
                    android:contentDescription="@string/volume"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/level_8"
                    android:background="@drawable/yellow_button"
                    android:contentDescription="@string/volume"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/level_7"
                    android:background="@drawable/yellow_button"
                    android:contentDescription="@string/volume"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/level_6"
                    android:background="@drawable/green_button"
                    android:contentDescription="@string/volume"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/level_5"
                    android:background="@drawable/green_button"
                    android:contentDescription="@string/volume"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/level_4"
                    android:background="@drawable/green_button"
                    android:contentDescription="@string/volume"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/level_3"
                    android:background="@drawable/blue_button"
                    android:contentDescription="@string/volume"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/level_2"
                    android:background="@drawable/blue_button"
                    android:contentDescription="@string/volume"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/level_1"
                    android:background="@drawable/blue_button"
                    android:contentDescription="@string/volume"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/lyrics_box"
                android:layout_margin="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/volval"
                    android:id="@+id/textView31"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textColor="#ff0"
                    android:textAppearance="@android:style/TextAppearance.Large" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/dBTextView"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/average"
                    android:id="@+id/textView34"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textColor="#ff0"
                    android:textAppearance="@android:style/TextAppearance.Large" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/averagevol"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resetaverage"
                    android:text="@string/reset"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/green_button"
                    android:layout_margin="8dp"
                    android:textColor="#fff" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@drawable/lyrics_box">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/maxvolrange"
                    android:id="@+id/textView32"
                    android:layout_marginTop="24dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textColor="#ff0" />

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/maxvolrange"
                    android:minWidth="600dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/volval"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drawer_close"
                android:id="@+id/dBClose"
                android:layout_gravity="right"
                android:background="@drawable/blue_button"
                android:layout_margin="8dp"
                android:textColor="#fff" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>