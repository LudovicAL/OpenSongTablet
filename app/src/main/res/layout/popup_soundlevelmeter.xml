<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_bg"
    android:padding="8dp">

    <FrameLayout
        android:id="@+id/myTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/myTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="400dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@drawable/section_box"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/level_10"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/red_button"
                    android:contentDescription="@string/volume"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/level_9"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/red_button"
                    android:contentDescription="@string/volume"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/level_8"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/yellow_button"
                    android:contentDescription="@string/volume"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/level_7"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/yellow_button"
                    android:contentDescription="@string/volume"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/level_6"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/green_button"
                    android:contentDescription="@string/volume"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/level_5"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/green_button"
                    android:contentDescription="@string/volume"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/level_4"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/green_button"
                    android:contentDescription="@string/volume"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/level_3"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/blue_button"
                    android:contentDescription="@string/volume"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/level_2"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/blue_button"
                    android:contentDescription="@string/volume"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/level_1"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/blue_button"
                    android:contentDescription="@string/volume"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@drawable/section_box"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView31"
                    style="@style/MyHeadingText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="@string/volval" />

                <TextView
                    android:id="@+id/dBTextView"
                    style="@style/MyHeadingText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/textView34"
                    style="@style/MyWhiteHeadingText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="@string/average" />

                <TextView
                    android:id="@+id/averagevol"
                    style="@style/MyWhiteHeadingText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal" />

                <Button
                    android:id="@+id/resetaverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="8dp"
                    android:background="@drawable/green_button"
                    android:text="@string/reset"
                    android:textColor="#fff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@drawable/section_box"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView32"
                    style="@style/MyHeadingText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:gravity="center_horizontal"
                    android:text="@string/maxvolrange" />

                <SeekBar
                    android:id="@+id/maxvolrange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="24dp"
                    android:minWidth="600dp" />

                <TextView
                    android:id="@+id/volval"
                    style="@style/MyWhiteHeadingText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>