<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="FullscreenBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.garethevans.church.opensongtablet.customviews.DialogTitleClose
            android:id="@+id/dialogHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:isScrollContainer="true"
                android:orientation="vertical">

                <com.garethevans.church.opensongtablet.customviews.MaterialTextView
                    android:id="@+id/createSet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="@string/set_new"
                    android:icon="@drawable/ic_table_edit_white_36dp"
                    android:hint="@string/set_new_info" />

                <com.garethevans.church.opensongtablet.customviews.MaterialTextView
                    android:id="@+id/manageSet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="@string/set_manage"
                    android:icon="@drawable/ic_database_white_36dp"
                    android:hint="@string/set_manage_info" />

                <com.garethevans.church.opensongtablet.customviews.MaterialTextView
                    android:id="@+id/variation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="@string/variation"
                    android:icon="@drawable/ic_pencil_white_36dp"
                    android:hint="@string/variation_make" />

                <com.garethevans.church.opensongtablet.customviews.MaterialTextView
                    android:id="@+id/addCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="@string/custom_slide"
                    android:icon="@drawable/ic_format_list_bulleted_white_36dp"
                    android:hint="@string/add_custom_slide" />

                <com.garethevans.church.opensongtablet.customviews.MaterialTextView
                    android:id="@+id/shuffleSet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="@string/set_shuffle"
                    android:icon="@drawable/ic_shuffle_white_36dp"
                    android:hint="@string/set_shuffle_info" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>