<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DefaultView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="@string/doubleTap" />

            <com.garethevans.church.opensongtablet.customviews.ExposedDropDown
                android:id="@+id/doubleTap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/action" />

            <TableRow style="@style/DividerLine" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="@string/longPress" />

            <com.garethevans.church.opensongtablet.customviews.ExposedDropDown
                android:id="@+id/longPress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="400dp"
                android:hint="@string/action" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>