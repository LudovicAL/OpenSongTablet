<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DefaultView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.garethevans.church.opensongtablet.customviews.MaterialSwitch
                android:id="@+id/allowPinchToZoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pinch_to_zoom"
                android:hint="@string/pinch_to_zoom_info"/>

            <TableRow style="@style/DividerLine"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/double_tap" />

            <com.garethevans.church.opensongtablet.customviews.ExposedDropDown
                android:id="@+id/doubleTap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="@string/action" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/long_press_action" />

            <com.garethevans.church.opensongtablet.customviews.ExposedDropDown
                android:id="@+id/longPress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="400dp"
                android:hint="@string/action" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>