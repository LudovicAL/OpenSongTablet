<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bb_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bb_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_medium"
        tools:text="@string/folder" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bb_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_medium"
        tools:text="@string/song" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bb_timesig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_medium"
        tools:text="@string/time_signature" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bb_kit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_medium"
        tools:text="@string/drum_kit" />

    <TableRow style="@style/DividerLine" />
</LinearLayout>