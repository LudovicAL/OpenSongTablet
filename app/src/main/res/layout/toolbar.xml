<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:background="@color/toolbar"
    app:elevation="8dp"
    app:popupTheme="@style/ThemeOverlay.OpenSongApp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/songandauthor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/batteryholder"
            android:layout_toStartOf="@+id/batteryholder"
            android:gravity="center_vertical|left"
            android:minWidth="90dp">

            <TextView
                android:id="@+id/songtitle_ab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="0dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="This is the song title"
                android:textColor="#fff"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/songkey_ab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/songtitle_ab"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="(Am)"
                android:textColor="#fff"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/songauthor_ab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/songtitle_ab"
                android:layout_margin="0dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="This is the song author"
                android:textColor="#fff"
                android:textSize="8sp"
                tools:ignore="SmallSp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/batteryholder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:minWidth="50dp"
            android:orientation="vertical"
            android:padding="0dp">

            <ImageView
                android:id="@+id/batteryimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/time" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp">

                <TextView
                    android:id="@+id/batterycharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxWidth="50dp"
                    android:text="99%"
                    android:textColor="#fff"
                    android:textSize="9sp"
                    tools:gravity="center"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/digitalclock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="0dp"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:lines="1"
                    android:maxWidth="50dp"
                    android:padding="0dp"
                    android:text="12:00"
                    android:textColor="#ffffff"
                    android:textSize="9sp"
                    tools:ignore="SmallSp" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.Toolbar>