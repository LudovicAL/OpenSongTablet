<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hot_zones_info"
                android:textSize="@dimen/text_large"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hot_zone_top_left"
                android:textSize="@dimen/text_large"
                android:layout_marginBottom="8dp"/>

            <com.garethevans.church.opensongtablet.customviews.ExposedDropDown
                android:id="@+id/hotZoneTLShort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/action_short_press"
                android:layout_marginBottom="8dp"/>

            <com.garethevans.church.opensongtablet.customviews.ExposedDropDown
                android:id="@+id/hotZoneTLLong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/action_long_press" />
            <TableRow style="@style/DividerLine"/>


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hot_zone_top_center"
                android:textSize="@dimen/text_large"
                android:layout_marginBottom="8dp"/>

            <com.garethevans.church.opensongtablet.customviews.ExposedDropDown
                android:id="@+id/hotZoneTCShort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/action_short_press"
                android:layout_marginBottom="8dp"/>

            <com.garethevans.church.opensongtablet.customviews.ExposedDropDown
                android:id="@+id/hotZoneTCLong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/action_long_press" />
            <TableRow style="@style/DividerLine"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hot_zone_bottom_center"
                android:textSize="@dimen/text_large"
                android:layout_marginBottom="8dp"/>

            <com.garethevans.church.opensongtablet.customviews.ExposedDropDown
                android:id="@+id/hotZoneBCShort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/action_short_press"
                android:layout_marginBottom="8dp"/>

            <com.garethevans.church.opensongtablet.customviews.ExposedDropDown
                android:id="@+id/hotZoneBCLong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/action_long_press" />
            <TableRow style="@style/DividerLine"/>


            <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hot_zone_rationale"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>