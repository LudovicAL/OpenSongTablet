<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/pagepresentermode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:orientation="vertical">

            <include
                android:id="@+id/mytoolbar"
                layout="@layout/newtoolbarinclude"
                android:clipChildren="false"
                android:clipToPadding="false" />

            <LinearLayout
                android:id="@+id/presenter_window"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff000000"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:weightSum="1">

                <!--// COLUMN 1-->
                <RelativeLayout
                    android:id="@+id/col1_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25">

                    <include
                        android:id="@+id/pres_col1"
                        layout="@layout/presenter_mode_col1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipChildren="false"
                        android:clipToPadding="false" />
                </RelativeLayout>

                <!--// COLUMN 2 + 3 HOLDER-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="0.75"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        tools:ignore="NestedWeights">

                        <!--// COLUMN 2-->
                        <RelativeLayout
                            android:id="@+id/col2_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.65">

                            <include
                                android:id="@+id/pres_col2"
                                layout="@layout/presenter_mode_col2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clipChildren="false"
                                android:clipToPadding="false" />
                        </RelativeLayout>

                        <!--// COLUMN 3-->
                        <RelativeLayout
                            android:id="@+id/col3_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="0.35">

                            <include
                                android:id="@+id/pres_col3"
                                layout="@layout/presenter_mode_col3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clipChildren="false"
                                android:clipToPadding="false" />
                        </RelativeLayout>

                    </LinearLayout>

                    <!--// NAV BUTTONS-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <include
                            android:id="@+id/pres_nav"
                            layout="@layout/presenter_mode_quicknav"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipChildren="false"
                            android:clipToPadding="false" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!--<include layout="@layout/_songmenu" />-->

        <!--<include layout="@layout/_optionmenu" />-->

    </androidx.drawerlayout.widget.DrawerLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
