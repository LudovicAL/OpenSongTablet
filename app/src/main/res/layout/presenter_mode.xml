<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pagepresentermode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:orientation="vertical">

        <include
            android:id="@+id/mytoolbar"
            layout="@layout/toolbar"
            android:clipChildren="false"
            android:clipToPadding="false" />

        <LinearLayout
            android:id="@+id/presenter_window"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff000000"
            android:baselineAligned="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/pres_col1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/pres_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/presenter_box_blue"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/presenter_songtitle"
                        style="@style/MyHeadingText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_song_title" />

                    <TextView
                        android:id="@+id/presenter_author"
                        style="@style/MyInfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_song_author" />

                    <TextView
                        android:id="@+id/presenter_copyright"
                        style="@style/MyInfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_song_copyright" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pres_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/presenter_box_green"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/presenter_order_title"
                        style="@style/MyHeadingText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_song_presentation" />

                    <CheckBox
                        android:id="@+id/presenter_order_text"
                        style="@style/MyInfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minLines="2"
                        android:text="@string/edit_song_presentation" />

                    <Button
                        android:id="@+id/presenter_order_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/presenter_green_button"
                        android:minHeight="0dp"
                        android:text="@string/options_set_edit"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/preso_set_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/presenter_box_red"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/presenter_set"
                        style="@style/MyHeadingText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_format_list_numbers_white_36dp"
                        android:gravity="center_vertical"
                        android:text="@string/currentset" />


                    <ScrollView
                        android:id="@+id/presenter_setbuttons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/presenter_set_buttonsListView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />
                    </ScrollView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/pres_col2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/pres_slide"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="0.6"
                    android:background="@drawable/presenter_box_black"
                    android:orientation="vertical"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:id="@+id/preso_slide_title"
                        style="@style/MyHeadingText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/slide" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/presenter_lyrics"
                                style="@style/MyEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="4dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_marginStart="4dp"
                                android:gravity="top"
                                android:hint="@string/edit_song_lyrics"
                                android:inputType="textAutoCorrect|text|textMultiLine"
                                android:minLines="4" />

                            <ImageView
                                android:id="@+id/presenter_lyrics_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginEnd="4dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_marginStart="4dp"
                                android:contentDescription="@string/page_background" />

                            <LinearLayout
                                android:id="@+id/loopandtimeLinearLayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/loopCheckBox"
                                    style="@style/MyHeadingText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/loop" />

                                <TextView
                                    android:id="@+id/timeTextView"
                                    style="@style/MyHeadingText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginStart="16dp"
                                    android:text="@string/time" />

                                <EditText
                                    android:id="@+id/timeEditText"
                                    style="@style/MyEditText"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_weight="1"
                                    android:inputType="number"
                                    android:minWidth="16dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/loopcontrolsLinearLayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal">

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/stopSlideShow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:src="@drawable/ic_stop_white_36dp"
                                    app:fabSize="mini" />

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/startSlideShow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:src="@drawable/ic_play_white_36dp"
                                    app:fabSize="mini" />

                            </LinearLayout>

                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/preso_sections"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/presenter_box_magenta"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/preso_sections_title"
                        style="@style/MyHeadingText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/song_sections" />

                    <ScrollView
                        android:id="@+id/presenter_songbuttons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/presenter_song_buttonsListView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/preso_QuickNav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/presenter_box_green"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/preso_quicknav_title"
                        style="@style/MyHeadingText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/navigate" />

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <android.support.design.widget.FloatingActionButton
                                android:id="@+id/nav_prevsong"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:src="@drawable/ic_skip_backward_white_36dp"
                                app:fabSize="mini" />

                            <android.support.design.widget.FloatingActionButton
                                android:id="@+id/nav_prevsection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:src="@drawable/ic_skip_previous_white_36dp"
                                app:fabSize="mini" />

                            <android.support.design.widget.FloatingActionButton
                                android:id="@+id/nav_nextsection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:src="@drawable/ic_skip_next_white_36dp"
                                app:fabSize="mini" />

                            <android.support.design.widget.FloatingActionButton
                                android:id="@+id/nav_nextsong"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:src="@drawable/ic_skip_forward_white_36dp"
                                app:fabSize="mini" />

                        </LinearLayout>

                    </HorizontalScrollView>
                    <!--
    DO I NEED A SECTION FOR QUICK NAVIGATION?
    THIS WOULD INCLUDE NEXT IN SET, NEXT SECTION THAT AUTOPROJECTS
    THIS SHOULD GO BELOW THE LYRICS SECTION
-->


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pres_col3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/pres_actions"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/presenter_box_blue"
                    android:orientation="vertical"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:id="@+id/preso_actions_title"
                        style="@style/MyHeadingText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/actions" />

                    <ScrollView
                        android:id="@+id/preso_action_buttons_scroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/preso_Action_buttons"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/presenter_project_group"
                                style="@style/MyInfoText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:drawableLeft="@drawable/ic_projector_white_36dp"
                                android:drawablePadding="8dp"
                                android:gravity="center_vertical"
                                android:background="@drawable/section_box"
                                android:text="@string/sendtoprojector" />

                            <TextView
                                android:id="@+id/presenter_logo_group"
                                style="@style/MyInfoText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:drawableLeft="@drawable/ic_projector_logo_white_36dp"
                                android:drawablePadding="8dp"
                                android:gravity="center_vertical"
                                android:background="@drawable/section_box"
                                android:text="@string/presoShowLogo" />

                            <TextView
                                android:id="@+id/presenter_blank_group"
                                style="@style/MyInfoText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:drawableLeft="@drawable/ic_video_off_white_36dp"
                                android:drawablePadding="8dp"
                                android:gravity="center_vertical"
                                android:background="@drawable/section_box"
                                android:text="@string/black_screen" />

                            <TextView
                                android:id="@+id/presenter_alert_group"
                                style="@style/MyInfoText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:drawableLeft="@drawable/ic_message_alert_white_36dp"
                                android:drawablePadding="8dp"
                                android:gravity="center_vertical"
                                android:background="@drawable/section_box"
                                android:text="@string/alert" />

                            <TextView
                                android:id="@+id/presenter_audio_group"
                                style="@style/MyInfoText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:drawableLeft="@drawable/ic_amplifier_white_36dp"
                                android:drawablePadding="4dp"
                                android:gravity="center_vertical"
                                android:background="@drawable/section_box"
                                android:text="@string/media" />

                            <TextView
                                android:id="@+id/presenter_dB_group"
                                style="@style/MyInfoText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:drawableLeft="@drawable/ic_volume_high_white_36dp"
                                android:drawablePadding="8dp"
                                android:gravity="center_vertical"
                                android:background="@drawable/section_box"
                                android:text="@string/volume" />

                            <TextView
                                android:id="@+id/presenter_slide_group"
                                style="@style/MyInfoText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:drawableLeft="@drawable/ic_projector_screen_white_36dp"
                                android:drawablePadding="8dp"
                                android:gravity="center_vertical"
                                android:background="@drawable/section_box"
                                android:text="@string/slide" />

                            <TextView
                                android:id="@+id/presenter_scripture_group"
                                style="@style/MyInfoText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:drawableLeft="@drawable/ic_bible_white_36dp"
                                android:drawablePadding="8dp"
                                android:gravity="center_vertical"
                                android:background="@drawable/section_box"
                                android:text="@string/scripture" />

                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pres_settings"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/presenter_box_red"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/preso_settings_title"
                        style="@style/MyHeadingText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings" />

                    <ScrollView
                        android:id="@+id/preso_settings_scroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/pres_settings_buttons"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/presenter_backgrounds_group"
                                style="@style/MyInfoText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:drawableLeft="@drawable/ic_image_white_36dp"
                                android:drawablePadding="4dp"
                                android:gravity="center_vertical"
                                android:background="@drawable/section_box"
                                android:text="@string/presoBackground" />
                            <TextView
                                android:id="@+id/presenter_layout_group"
                                style="@style/MyInfoText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:drawableLeft="@drawable/ic_code_array_white_36dp"
                                android:drawablePadding="4dp"
                                android:gravity="center_vertical"
                                android:background="@drawable/section_box"
                                android:text="@string/layout" />

                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/songmenu" />

    <include layout="@layout/optionmenu" />

</android.support.v4.widget.DrawerLayout>