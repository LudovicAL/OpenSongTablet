<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".preferences.SettingsCategories"
    style="@style/PrefScrollView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.garethevans.church.opensongtablet.preferences.PrefTextLinkView
            android:id="@+id/storageButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:main="@string/storage"
            app:sub="Manage your app and song folders" />

        <TableRow style="@style/DividerLine" />

        <com.garethevans.church.opensongtablet.preferences.PrefTextLinkView
            android:id="@+id/displayButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:main="Display"
            app:sub="Change display settings (what you see on screen)" />

        <TableRow style="@style/DividerLine" />

        <com.garethevans.church.opensongtablet.preferences.PrefTextLinkView
            android:id="@+id/ccliButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:main="CCLI"
            app:sub="Change CCLI log" />

        <TableRow style="@style/DividerLine" />


    </LinearLayout>
</androidx.core.widget.NestedScrollView>