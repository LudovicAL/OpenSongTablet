<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DefaultView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:orientation="vertical">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/songMenuCheckboxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/song_menu_checkboxes" />

            <TableRow style="@style/DividerLine" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/songAlphabeticalShow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/alphabetical" />

            <com.garethevans.church.opensongtablet.customviews.MaterialSlider
                android:id="@+id/songAlphabeticalSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/size"
                android:text="@string/size"
                android:valueFrom="6.0"
                android:valueTo="24.0" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>