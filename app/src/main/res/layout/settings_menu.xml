<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PrefScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/songMenuCheckboxes"
            style="@style/PrefSwitch"
            android:text="@string/song_menu_checkboxes" />

        <TableRow style="@style/DividerLine" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/songAlphabeticalShow"
            style="@style/PrefSwitch"
            android:text="@string/alphabetical" />

        <LinearLayout
            android:id="@+id/songAlphabeticalSizeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/size" />

            <SeekBar
                android:id="@+id/songAlphabeticalSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="16"
                android:padding="8dp" />
        </LinearLayout>

        <TableRow style="@style/DividerLine" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>