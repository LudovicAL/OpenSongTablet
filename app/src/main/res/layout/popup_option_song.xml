<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/songMenuTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="4dp"
        android:gravity="center"
        android:text="@string/options_song"
        android:textSize="14sp"
        android:drawableLeft="@drawable/ic_arrow_up_drop_circle_outline_yellow_36dp"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/ic_arrow_up_drop_circle_outline_yellow_36dp"
        android:textColor="#ff0" />

    <ScrollView
        android:id="@+id/optionschordsscrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/songEditButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:textColor="#fff"
                android:textSize="12sp"
                android:drawableLeft="@drawable/ic_table_edit_white_36dp"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_table_edit_white_36dp"
                android:gravity="center_vertical"
                android:text="@string/options_song_edit" />

            <Button
                android:id="@+id/songStickyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:textColor="#fff"
                android:textSize="12sp"
                android:drawableLeft="@drawable/ic_comment_text_white_36dp"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_comment_text_white_36dp"
                android:gravity="center_vertical"
                android:text="@string/options_song_stickynotes" />

            <Button
                android:id="@+id/songRenameButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:textColor="#fff"
                android:textSize="12sp"
                android:drawableLeft="@drawable/ic_rename_box_white_36dp"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_rename_box_white_36dp"
                android:gravity="center_vertical"
                android:text="@string/options_song_rename" />

            <Button
                android:id="@+id/songNewButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:textColor="#fff"
                android:textSize="12sp"
                android:drawableLeft="@drawable/ic_plus_white_36dp"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_plus_white_36dp"
                android:gravity="center_vertical"
                android:text="@string/options_song_new" />

            <Button
                android:id="@+id/songDeleteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:textColor="#fff"
                android:textSize="12sp"
                android:drawableLeft="@drawable/ic_delete_white_36dp"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_delete_white_36dp"
                android:gravity="center_vertical"
                android:text="@string/options_song_delete" />

            <Button
                android:id="@+id/songExportButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:textColor="#fff"
                android:textSize="12sp"
                android:drawableLeft="@drawable/ic_share_variant_white_36dp"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_share_variant_white_36dp"
                android:gravity="center_vertical"
                android:text="@string/options_song_export" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/songPresentationOrderButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:textColor="#fff"
                android:textSize="12sp"
                android:drawableLeft="@drawable/ic_format_list_numbers_white_36dp"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_format_list_numbers_white_36dp"
                android:text="@string/edit_song_presentation"
                app:showText="false"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>