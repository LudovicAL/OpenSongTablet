<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#232344"
    android:padding="12dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView68"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="4dp"
        android:gravity="center_horizontal"
        android:text="@string/options_song"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff0" />

    <ScrollView
        android:id="@+id/optionschordsscrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/songEditButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawableLeft="@drawable/ic_table_edit_white_48dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_table_edit_white_48dp"
                android:gravity="center_vertical"
                android:text="@string/options_song_edit" />

            <Button
                android:id="@+id/songStickyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawableLeft="@drawable/ic_comment_text_white_48dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_comment_text_white_48dp"
                android:gravity="center_vertical"
                android:text="@string/options_song_stickynotes" />

            <Button
                android:id="@+id/songRenameButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawableLeft="@drawable/ic_rename_box_white_48dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_rename_box_white_48dp"
                android:gravity="center_vertical"
                android:text="@string/options_song_rename" />

            <Button
                android:id="@+id/songNewButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawableLeft="@drawable/ic_plus_white_48dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_plus_white_48dp"
                android:gravity="center_vertical"
                android:text="@string/options_song_new" />

            <Button
                android:id="@+id/songDeleteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawableLeft="@drawable/ic_delete_white_48dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_delete_white_48dp"
                android:gravity="center_vertical"
                android:text="@string/options_song_delete" />

            <Button
                android:id="@+id/songExportButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawableLeft="@drawable/ic_share_variant_white_48dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_share_variant_white_48dp"
                android:gravity="center_vertical"
                android:text="@string/options_song_export" />

            <Button
                android:id="@+id/songPresentationOrderButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawableLeft="@drawable/ic_format_list_numbers_white_48dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_format_list_numbers_white_48dp"
                android:gravity="center_vertical"
                android:text="@string/edit_song_presentation" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>