<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    android:id="@+id/myToolbar"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    app:elevation="8dp"
    android:layout_alignParentStart="true"
    android:theme="@style/AppTheme.ActionBar"
    app:contentInsetStartWithNavigation="0dp"
    app:titleMarginStart="0dp"
    app:contentInsetStart="0dp">

    <LinearLayout
        android:id="@+id/actionBarBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/songandauthor"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start">

            <ImageView
                android:id="@+id/inSet"
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:layout_above="@+id/songauthor_ab"
                android:layout_alignBottom="@+id/topRow"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="0dp"
                android:contentDescription="@string/set"
                android:padding="0dp"
                android:src="@drawable/check"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/topRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/inSet"
                android:orientation="horizontal"
                android:paddingStart="0dp"
                android:paddingEnd="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/songtitle_ab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="Song title" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/songkey_ab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    tools:text="Song key" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/songcapo_ab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    tools:text=" (capo)" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/songauthor_ab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topRow"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@id/inSet"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="16sp"
                tools:text="Author" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/batteryholder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/webHelp"
            android:gravity="center"
            android:minWidth="48dp"
            android:maxWidth="48dp"
            android:orientation="vertical"
            android:padding="0dp">

            <ImageView
                android:id="@+id/batteryimage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/time" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/transparent"
                android:padding="0dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/batterycharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxWidth="50dp"
                    android:text="99%"
                    android:textColor="#fff"
                    android:textSize="11sp"
                    tools:gravity="center"
                    tools:ignore="HardcodedText,SmallSp" />

                <TextClock
                    android:id="@+id/digitalclock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/transparent"
                    android:layout_margin="0dp"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:singleLine="true"
                    android:maxWidth="50dp"
                    android:padding="0dp"
                    android:text="12:00"
                    android:textColor="#ffffff"
                    android:textSize="11sp"
                    tools:ignore="HardcodedText,SmallSp"/>

                <!--<com.google.android.material.textview.MaterialTextView
                    android:id="@+id/digitalclock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="0dp"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:singleLine="true"
                    android:maxWidth="50dp"
                    android:padding="0dp"
                    android:text="12:00"
                    android:textColor="#ffffff"
                    android:textSize="11sp"
                    tools:ignore="HardcodedText,SmallSp" />-->

            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/webHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/web"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"/>
    </LinearLayout>
</androidx.appcompat.widget.Toolbar>