<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    app:elevation="8dp"
    android:layout_alignParentStart="true"
    android:theme="@style/AppTheme.ActionBar">

    <RelativeLayout
        android:id="@+id/actionBarBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/songandauthor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/batteryholder"
            android:gravity="center_vertical|start"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:id="@+id/topRow"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:paddingStart="0dp"
                android:paddingEnd="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/songtitle_ab"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:textColor="#fff"
                    style="@style/MySongTitleText"
                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/songkey_ab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="#fff"
                    style="@style/MySongTitleText" />

                <TextView
                    android:id="@+id/songcapo_ab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="#fff"
                    style="@style/MySongTitleText" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"/>

            </LinearLayout>

            <TextView
                android:id="@+id/songauthor_ab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topRow"
                android:layout_margin="0dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#fff"
                style="@style/MySongAuthorText"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/batteryholder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:minWidth="50dp"
            android:orientation="vertical"
            android:padding="0dp">

            <ImageView
                android:id="@+id/batteryimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/time" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp">

                <TextView
                    android:id="@+id/batterycharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxWidth="50dp"
                    android:text="99%"
                    android:textColor="#fff"
                    android:textSize="11sp"
                    tools:gravity="center"
                    tools:ignore="HardcodedText,SmallSp" />

                <TextView
                    android:id="@+id/digitalclock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="0dp"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:singleLine="true"
                    android:maxWidth="50dp"
                    android:padding="0dp"
                    android:text="12:00"
                    android:textColor="#ffffff"
                    android:textSize="11sp"
                    tools:ignore="HardcodedText,SmallSp" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>