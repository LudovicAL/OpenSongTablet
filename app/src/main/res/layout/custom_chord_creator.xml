                    android:onClick="string5_f4"
                    android:src="@drawable/string_5" />

                <ImageView
                    android:id="@+id/string4_f4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="string4_f4"
                    android:src="@drawable/string_4" />

                <ImageView
                    android:id="@+id/string3_f4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/customchords"
                    android:onClick="string3_f4"
                    android:src="@drawable/string_3" />

                <ImageView
                    android:id="@+id/string2_f4"
