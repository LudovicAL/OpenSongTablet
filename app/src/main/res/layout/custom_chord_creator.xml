                    android:contentDescription="@string/customchords"
                    android:onClick="string1_f2"
                    android:src="@drawable/string_1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fret3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/string6_f3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/customchords"
                    android:onClick="string6_f3"
                    android:src="@drawable/string_6" />

                <ImageView
                    android:id="@+id/string5_f3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/customchords"
                    android:onClick="string5_f3"
                    android:src="@drawable/string_5" />

                <ImageView
                    android:id="@+id/string4_f3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/customchords"
                    android:onClick="string4_f3"
                    android:src="@drawable/string_4" />

                <ImageView
                    android:id="@+id/string3_f3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="string3_f3"
                    android:src="@drawable/string_3" />

                <ImageView
                    android:id="@+id/string2_f3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/customchords"
                    android:onClick="string2_f3"
                    android:src="@drawable/string_2" />

                <ImageView
                    android:id="@+id/string1_f3"
