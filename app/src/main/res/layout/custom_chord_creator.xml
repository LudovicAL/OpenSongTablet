        </LinearLayout>

        <LinearLayout
            android:id="@+id/chorddetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"
            android:layout_toRightOf="@id/guitar"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/instrument"
                android:textColor="#fff"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/customchords_instrument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#aaa"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customchords_fret"
                android:textColor="#fff"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/customchords_fret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#aaa"
                android:textColor="#000"
                android:textSize="16sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/customchords_name"
                android:textColor="#fff"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/customchord_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#aaa"
                android:hint="@string/customchords_name"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="#000"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/customchords_code"
                android:textColor="#fff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/customchord_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="16sp" />

            <Button
                style="@style/ButtonBarButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/customchords_save"
                android:background="@drawable/green_button"
                android:onClick="customChordSave"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_margin="18dp"
                android:layout_gravity="fill_horizontal"
                android:layout_weight="1"
                android:layout_height="4dp"
                android:contentDescription="@string/chords"
                android:src="@drawable/blue_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/customchords_saved"
                android:textColor="#fff"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/savedcustomchords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>


        </LinearLayout>

        <Button
            android:id="@+id/close"
            style="@style/ButtonBarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chorddetails"
            android:background="@drawable/grey_button"
            android:onClick="gotosongs"
            android:padding="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="200dp"
            android:text="@string/drawer_close" />


    </RelativeLayout>
</ScrollView>
