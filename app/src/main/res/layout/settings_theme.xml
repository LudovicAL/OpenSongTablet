<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DefaultView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.garethevans.church.opensongtablet.customviews.ExposedDropDown
                android:id="@+id/themeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/theme_choose" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/section_box"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/main_song_display" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/lyricsButton"
                    style="@style/TextBackgroundButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lyrics"
                    app:icon="@drawable/rectangle"
                    app:iconGravity="start"
                    app:iconSize="32dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/chordsButton"
                    style="@style/TextBackgroundButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/chords"
                    app:icon="@drawable/rectangle"
                    app:iconGravity="start"
                    app:iconSize="32dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/capoButton"
                    style="@style/TextBackgroundButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/capo_chords"
                    app:icon="@drawable/rectangle"
                    app:iconGravity="start"
                    app:iconSize="32dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/pageButton"
                    style="@style/TextBackgroundButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/background"
                    app:icon="@drawable/rectangle"
                    app:iconGravity="start"
                    app:iconSize="32dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/section_box"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/section_highlighting" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/verseButton"
                    style="@style/TextBackgroundButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/verse"
                    app:icon="@drawable/rectangle"
                    app:iconGravity="start"
                    app:iconSize="32dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/chorusButton"
                    style="@style/TextBackgroundButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/chorus"
                    app:icon="@drawable/rectangle"
                    app:iconGravity="start"
                    app:iconSize="32dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/prechorusButton"
                    style="@style/TextBackgroundButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/prechorus"
                    app:icon="@drawable/rectangle"
                    app:iconGravity="start"
                    app:iconSize="32dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bridgeButton"
                    style="@style/TextBackgroundButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bridge"
                    app:icon="@drawable/rectangle"
                    app:iconGravity="start"
                    app:iconSize="32dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tagButton"
                    style="@style/TextBackgroundButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tag"
                    app:icon="@drawable/rectangle"
                    app:iconGravity="start"
                    app:iconSize="32dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/commentButton"
                    style="@style/TextBackgroundButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/comment"
                    app:icon="@drawable/rectangle"
                    app:iconGravity="start"
                    app:iconSize="32dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/customButton"
                    style="@style/TextBackgroundButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/custom"
                    app:icon="@drawable/rectangle"
                    app:iconGravity="start"
                    app:iconSize="32dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/titleHighlighting"
                    style="@style/TextBackgroundButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    app:icon="@drawable/rectangle"
                    app:iconGravity="start"
                    app:iconSize="32dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/chordHighlighting"
                    style="@style/TextBackgroundButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/chords"
                    app:icon="@drawable/rectangle"
                    app:iconGravity="start"
                    app:iconSize="32dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/section_box"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/presentation_mode" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/presoButton"
                    style="@style/TextBackgroundButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text"
                    app:icon="@drawable/rectangle"
                    app:iconGravity="start"
                    app:iconSize="32dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/presoInfoButton"
                    style="@style/TextBackgroundButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/info_text"
                    app:icon="@drawable/rectangle"
                    app:iconGravity="start"
                    app:iconSize="32dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/presoAlertButton"
                    style="@style/TextBackgroundButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/alert"
                    app:icon="@drawable/rectangle"
                    app:iconGravity="start"
                    app:iconSize="32dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/presoShadowButton"
                    style="@style/TextBackgroundButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/block_text_shadow"
                    app:icon="@drawable/rectangle"
                    app:iconGravity="start"
                    app:iconSize="32dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/section_box"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/song_features" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/metronomeButton"
                    style="@style/TextBackgroundButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/metronome"
                    app:icon="@drawable/rectangle"
                    app:iconGravity="start"
                    app:iconSize="32dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/pagebuttonButton"
                    style="@style/TextBackgroundButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/page_buttons"
                    app:icon="@drawable/rectangle"
                    app:iconGravity="start"
                    app:iconSize="32dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/section_box"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/song_notes" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/stickytextButton"
                    style="@style/TextBackgroundButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text"
                    app:icon="@drawable/rectangle"
                    app:iconGravity="start"
                    app:iconSize="32dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/stickybackgroundButton"
                    style="@style/TextBackgroundButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/background"
                    app:icon="@drawable/rectangle"
                    app:iconGravity="start"
                    app:iconSize="32dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/section_box"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/extra" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/extratextButton"
                    style="@style/TextBackgroundButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text"
                    app:icon="@drawable/rectangle"
                    app:iconGravity="start"
                    app:iconSize="32dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/extrabackgroundButton"
                    style="@style/TextBackgroundButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/background"
                    app:icon="@drawable/rectangle"
                    app:iconGravity="start"
                    app:iconSize="32dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>