<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/popupmetronome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:fadeScrollbars="false"
    android:gravity="center_horizontal"
    android:background="@drawable/popup_bg"
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/edit_song_timesig"
            android:textColor="#fff"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <Spinner
            android:id="@+id/popupmetronome_timesig"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:padding="8dp"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/edit_song_tempo"
            android:textColor="#fff"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <SeekBar
            android:id="@+id/popupmetronome_tempo"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:background="@drawable/apptheme_scrubber_primary_holo"
            android:progressDrawable="@drawable/apptheme_scrubber_secondary_holo"
            android:thumb="@drawable/apptheme_scrubber_control_normal_holo_bright"
            android:layout_weight="1"
            android:max="160" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/popupmetronome_tempo_text"
                android:layout_margin="8dp"
                android:textColor="#fff"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textIsSelectable="false"
                android:maxLines="1"
                android:focusable="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bpm"
                android:id="@+id/textView44"
                android:textColor="#fff"
                android:layout_margin="8dp"
                android:textAppearance="@android:style/TextAppearance.Medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="#fff"
                android:id="@+id/decreaseTempo_Button"
                android:background="@drawable/grey_button"
                android:textSize="24sp"
                android:layout_margin="8dp"
                android:padding="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="#fff"
                android:id="@+id/increaseTempo_Button"
                android:background="@drawable/grey_button"
                android:textSize="24sp"
                android:layout_margin="8dp"
                android:padding="10dp" />

        </LinearLayout>

        <Button
            android:id="@+id/taptempo_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tap_tempo"
            android:textColor="#fff"
            android:background="@drawable/yellow_button"
            android:layout_margin="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/volume"
            android:layout_margin="8dp"
            android:textColor="#fff"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/popupmetronome_volume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/apptheme_scrubber_primary_holo"
                android:progressDrawable="@drawable/apptheme_scrubber_secondary_holo"
                android:thumb="@drawable/apptheme_scrubber_control_normal_holo_bright"
                android:layout_weight="1"
                android:max="100" />

            <TextView
                android:id="@+id/popupmetronome_volume_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textColor="#fff"
                android:textAppearance="@android:style/TextAppearance.Medium" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pan"
            android:layout_margin="8dp"
            android:textColor="#fff"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/popupmetronome_pan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/apptheme_scrubber_primary_holo"
                android:progressDrawable="@drawable/apptheme_scrubber_secondary_holo"
                android:thumb="@drawable/apptheme_scrubber_control_normal_holo_bright"
                android:layout_weight="1"
                android:max="2" />

            <TextView
                android:id="@+id/popupmetronome_pan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textColor="#000"
                android:textAppearance="@android:style/TextAppearance.Medium" />
        </LinearLayout>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/visualmetronome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="#fff"
            android:text="@string/visualmetronome"
            android:textAppearance="@android:style/TextAppearance.Medium"
            app:theme="@style/SwitchStyle" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/green_button"
            android:text="@string/savesong"
            android:textColor="#fff" />

        <Button
            android:id="@+id/popupmetronome_startstopbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/blue_button"
            android:text="@string/start"
            android:textColor="#fff" />
    </LinearLayout>
</ScrollView>
