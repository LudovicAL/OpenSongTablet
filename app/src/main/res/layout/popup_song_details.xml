<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/editSongDetails"
        android:layout_alignParentTop="true"
        android:layout_margin="12dp">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:id="@+id/t_mTitle"
        android:text="@string/edit_song_title"
        android:textColor="#ff0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/v_mTitle"
        android:textColor="#fff"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:layout_below="@+id/t_mTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="@string/edit_song_author"
        android:id="@+id/t_mAuthor"
        android:textColor="#ff0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/v_mAuthor"
        android:layout_marginBottom="8dp"
        android:textColor="#fff"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="@string/edit_song_copyright"
        android:id="@+id/t_mCopyright"
        android:textColor="#ff0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/v_mCopyright"
        android:layout_marginBottom="8dp"
        android:textColor="#fff"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="@string/edit_song_ccli"
        android:id="@+id/t_mCCLI"
        android:textColor="#ff0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/v_mCCLI"
        android:layout_marginBottom="8dp"
        android:textColor="#fff"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="@string/edit_song_presentation"
        android:id="@+id/t_mPresentation"
        android:textColor="#ff0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/v_mPresentation"
        android:layout_marginBottom="8dp"
        android:textColor="#fff"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="@string/edit_song_hymn"
        android:id="@+id/t_mHymnNumber"
        android:textColor="#ff0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/v_mHymnNumber"
        android:layout_marginBottom="8dp"
        android:textColor="#fff"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="@string/stickynotes"
        android:id="@+id/t_mNotes"
        android:textColor="#ff0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/v_mNotes"
        android:layout_marginBottom="8dp"
        android:textColor="#fff"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="@string/edit_song_lyrics"
        android:id="@+id/t_mLyrics"
        android:textColor="#ff0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/v_mLyrics"
        android:layout_marginBottom="8dp"
        android:textColor="#fff"
        android:textAppearance="@android:style/TextAppearance.Small" />

</LinearLayout>
</ScrollView>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/options_song_edit"
        android:id="@+id/editSongDetails"
        android:enabled="true"
        android:background="@drawable/green_button"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drawer_close"
        android:id="@+id/closeSongDetails"
        android:background="@drawable/blue_button"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/editSongDetails"
        android:layout_toStartOf="@+id/editSongDetails"
        android:layout_margin="8dp"
        android:textColor="#fff" />

</RelativeLayout>