<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ListViewAnimations"
    android:orientation="vertical">

    <TextView
        android:id="@+id/set_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_help"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:layout_alignParentTop="true" />

    <com.garethevans.church.opensongtablet.DynamicListView
        android:id="@+id/listview"
        android:background="#0000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_help"
        android:layout_above="@+id/set_save" />

    <Button
        android:id="@+id/set_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/green_button"
        android:text="@string/set_save"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_margin="8dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:id="@+id/set_cancel"
        android:background="@drawable/blue_button"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/set_save"
        android:layout_toStartOf="@+id/set_save"
        android:layout_margin="8dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/set_shuffle"
        android:background="@drawable/grey_button"
        android:src="@drawable/shuffle"
        android:layout_alignTop="@+id/set_cancel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:contentDescription="@string/options_set" />

</RelativeLayout>
