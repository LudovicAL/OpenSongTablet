                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/off" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/longPressDown"
                android:textSize="22sp" />

            <RadioGroup
                android:id="@+id/longPressDown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/longPressDown1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gesture1" />

                <RadioButton
                    android:id="@+id/longPressDown2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gesture2" />

                <RadioButton
                    android:id="@+id/longPressDown3"
                    android:layout_width="wrap_content"
