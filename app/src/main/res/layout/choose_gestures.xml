                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/longPressUp"
                android:textSize="22sp" />

            <RadioGroup
                android:id="@+id/longPressUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/longPressUp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gesture1" />

                <RadioButton
                    android:id="@+id/longPressUp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gesture2" />

                <RadioButton
                    android:id="@+id/longPressUp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gesture3" />

                <RadioButton
                    android:id="@+id/longPressUp4"
                    android:layout_width="wrap_content"
