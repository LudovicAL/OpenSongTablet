                    android:id="@+id/longPressPrevious7" />

                <RadioButton
                    android:id="@+id/longPressPrevious8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/off" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/longPressNext"
                android:textSize="22sp" />

            <RadioGroup
                android:id="@+id/longPressNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/longPressNext1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gesture1" />

                <RadioButton
                    android:id="@+id/longPressNext2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gesture2" />

                <RadioButton
                    android:id="@+id/longPressNext3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gesture3" />

                <RadioButton
                    android:id="@+id/longPressNext4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gesture4" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
