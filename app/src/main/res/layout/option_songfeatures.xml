<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/optionFeatureTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_arrow_up_drop_circle_outline_yellow_36dp"
            android:gravity="center"
            android:text="@string/song_features"
            style="@style/MyMenuHeadingText" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/closeOptionsFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:fabSize="mini"
            android:src="@drawable/ic_close_white_36dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/menu_version_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MyVersionText"/>

    <ScrollView
        android:id="@+id/optionsbackupscrollview"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/featureTransposeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawableStart="@drawable/ic_transpose_white_36dp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="@string/transpose"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/featurePadButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawableStart="@drawable/ic_amplifier_white_36dp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="@string/pad"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/featureAutoScrollButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawableStart="@drawable/ic_rotate_right_white_36dp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="@string/autoscroll"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/featureMetronomeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawableStart="@drawable/ic_pulse_white_36dp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="@string/metronome"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/featureStickyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawableStart="@drawable/ic_comment_text_white_36dp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="@string/stickynotes"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/featureDrawingButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawableStart="@drawable/ic_highlighter_white_36dp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="@string/highlight"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/featureChordsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawableStart="@drawable/ic_guitar_electric_white_36dp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="@string/chords"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/featureScoreButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawableStart="@drawable/ic_clef_white_36dp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="@string/music_score"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/featureLinksButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawableStart="@drawable/ic_link_white_36dp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="@string/link"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/featureOnYouTubeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawableStart="@drawable/ic_youtube_play_white_36dp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="@string/youtube"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/featureOnWebButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawableStart="@drawable/ic_web_white_36dp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="@string/websearch"
                android:textColor="#fff"
                android:textSize="12sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>