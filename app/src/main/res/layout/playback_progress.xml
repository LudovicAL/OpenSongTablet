<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:layout_alignParentRight="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/learnAutoScroll"
        android:background="#888888"
        android:alpha="0.4"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/learnAutoScroll_TextView"
            android:drawableLeft="@drawable/ic_rotate_right_white_36dp"
            android:drawablePadding="2dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_rotate_right_white_36dp"
            android:textStyle="bold|italic"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/learnAutoScrollTime_TextView"
            android:textStyle="bold|italic"
            android:textSize="14sp"
            android:textColor="#fff"
            android:singleLine="true"
            android:layout_margin="4dp"
            android:padding="4dp"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/backingtrackProgress"
        android:background="#888888"
        android:alpha="0.4"
        android:padding="4dp"
        android:gravity="center_vertical|center_horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView6"
            android:src="@drawable/ic_amplifier_white_36dp"
            android:contentDescription="@string/pad"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/padcurrentTime_TextView"
            android:textStyle="bold|italic"
            android:textSize="14sp"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "
            android:id="@+id/padTimeSeparator_TextView"
            android:textStyle="bold|italic"
            android:textSize="14sp"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/padtotalTime_TextView"
            android:textStyle="bold|italic"
            android:textSize="14sp"
            android:textColor="#fff" />
    </LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/playbackProgress"
    android:background="#888888"
    android:alpha="0.4"
    android:padding="4dp"
    android:gravity="center_vertical|center_horizontal">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView5"
        android:src="@drawable/ic_rotate_right_white_36dp"
        android:contentDescription="@string/autoscroll"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentTime_TextView"
        android:textStyle="bold|italic"
        android:textSize="14sp"
        android:textColor="#fff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" / "
        android:id="@+id/timeSeparator_TextView"
        android:textStyle="bold|italic"
        android:textSize="14sp"
        android:textColor="#fff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalTime_TextView"
        android:textStyle="bold|italic"
        android:textSize="14sp"
        android:textColor="#fff" />
</LinearLayout>
</LinearLayout>