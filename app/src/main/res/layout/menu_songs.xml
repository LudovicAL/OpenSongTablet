<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:toolsNs="http://schemas.android.com/tools"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:fitsSystemWindows="false">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <!-- Filter buttons -->
            <include android:id="@+id/filterButtons"
                layout="@layout/menu_filter_buttons"/>

            <include
                android:id="@+id/filters"
                layout="@layout/menu_songs_filters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp" />

            <LinearLayout
                android:id="@+id/menu_songs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <include
                    android:id="@+id/songmenualpha"
                    layout="@layout/menu_song_alphaindex" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include
                        layout="@layout/menu_songs_listtitles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.garethevans.church.opensongtablet.customviews.FastScrollRecyclerView
                            android:id="@+id/songListRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:bubbleColor="@color/colorSecondary"
                            app:bubbleSize="small"
                            app:bubbleTextColor="@color/white"
                            app:handleColor="@color/colorAltSecondary"
                            app:hideScrollbar="false"
                            app:scrollTrackColor="@color/colorPrimary"
                            app:showTrack="true" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/actionFAB"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/actionFAB"
            android:focusable="false"
            android:focusableInTouchMode="false">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/progressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                toolsNs:text="0%"
                android:background="@drawable/rectangle"
                app:backgroundTint="@color/colorSecondary"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/timer" />
        </FrameLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/actionFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:contentDescription="@string/action"
            android:src="@drawable/plus"
            app:useCompatPadding="true" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:scaleX="0.4"
        android:scaleY="0.4"
        app:layout_anchor="@+id/relativeLayout"
        app:layout_anchorGravity="center" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>