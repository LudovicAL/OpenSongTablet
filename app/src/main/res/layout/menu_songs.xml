<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <!-- Filter buttons -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/searchButtonGroup"
                style="@style/menuToggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:weightSum="5"
                app:checkedButton="@+id/folderButton">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/filterButton"
                    style="@style/IconOnlyButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:icon="@drawable/search"
                    app:iconSize="24dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keyButton"
                    style="@style/IconOnlyButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:icon="@drawable/clef"
                    app:iconSize="24dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/artistButton"
                    style="@style/IconOnlyButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:icon="@drawable/artist"
                    app:iconSize="24dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/folderButton"
                    style="@style/IconOnlyButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:icon="@drawable/folder_search"
                    app:iconSize="24dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tagButton"
                    style="@style/IconOnlyButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:icon="@drawable/tag"
                    app:iconSize="24dp" />

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <include
                android:id="@+id/filters"
                layout="@layout/menu_songs_filters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp" />

            <LinearLayout
                android:id="@+id/menu_songs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <include
                    android:id="@+id/songmenualpha"
                    layout="@layout/menu_song_alphaindex" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include
                        layout="@layout/menu_songs_listtitles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.garethevans.church.opensongtablet.customviews.FastScrollRecyclerView
                            android:id="@+id/songListRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:bubbleColor="@color/colorSecondary"
                            app:bubbleSize="small"
                            app:bubbleTextColor="@color/white"
                            app:handleColor="@color/colorAltSecondary"
                            app:hideScrollbar="false"
                            app:scrollTrackColor="@color/colorPrimary"
                            app:showTrack="true" />
                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/actionFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:contentDescription="@string/action"
            android:src="@drawable/plus"
            app:useCompatPadding="true" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:scaleX="0.4"
        android:scaleY="0.4"
        app:layout_anchor="@+id/relativeLayout"
        app:layout_anchorGravity="center" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>