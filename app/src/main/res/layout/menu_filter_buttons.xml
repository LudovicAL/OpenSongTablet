<?xml version="1.0" encoding="utf-8"?>
<!-- Filter buttons -->
<com.google.android.material.button.MaterialButtonToggleGroup android:id="@+id/searchButtonGroup"
    style="@style/menuToggle"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:layout_gravity="center"
    android:layout_marginTop="8dp"
    android:weightSum="6"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:checkedButton="@+id/folderButton"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/titleButton"
        style="@style/IconOnlyButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:icon="@drawable/title"
        app:iconSize="24dp"
        android:contentDescription="@string/filter_by_title"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/filterButton"
        style="@style/IconOnlyButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:icon="@drawable/search"
        app:iconSize="24dp"
        android:contentDescription="@string/filter_by_this_value"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/keyButton"
        style="@style/IconOnlyButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:icon="@drawable/clef"
        app:iconSize="24dp"
        android:contentDescription="@string/filter_by_key"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/artistButton"
        style="@style/IconOnlyButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:icon="@drawable/artist"
        app:iconSize="24dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/folderButton"
        style="@style/IconOnlyButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:icon="@drawable/folder_search"
        app:iconSize="24dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tagButton"
        style="@style/IconOnlyButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:icon="@drawable/tag"
        app:iconSize="24dp" />
</com.google.android.material.button.MaterialButtonToggleGroup>
