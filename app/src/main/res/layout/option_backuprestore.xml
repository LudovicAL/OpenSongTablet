<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/optionBackupTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_arrow_up_drop_circle_outline_yellow_36dp"
            android:gravity="center"
            android:text="@string/backup_and_restore"
            style="@style/MyMenuHeadingText" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/closeOptionsFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:fabSize="mini"
            android:src="@drawable/ic_close_white_36dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/menu_version_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MyVersionText"/>

    <ScrollView
        android:id="@+id/optionsbackupscrollview"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/backupOSBButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_database_export_white_36dp"
                android:gravity="center_vertical"
                android:text="@string/osb_backup"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/restoreOSBButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_database_import_white_36dp"
                android:gravity="center_vertical"
                android:text="@string/osb_restore"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/onSongImportButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_folder_zip_white_36dp"
                android:gravity="center_vertical"
                android:text="@string/import_onsong_choose"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/profileSaveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_account_arrow_right_white_36dp"
                android:gravity="center_vertical"
                android:text="@string/profile_backup"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/profileLoadButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_account_arrow_left_white_36dp"
                android:gravity="center_vertical"
                android:text="@string/profile_restore"
                android:textColor="#fff"
                android:textSize="12sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>