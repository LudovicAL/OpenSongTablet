<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="true" >

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <ScrollView
                android:id="@+id/buttonListScrollView"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:isScrollContainer="true"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical" >

                <LinearLayout
                    android:id="@+id/buttonList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>
            </ScrollView>

            <ScrollView
                android:id="@+id/projectItems"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:isScrollContainer="true"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical" >

                <LinearLayout
                    android:id="@+id/projectActions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <HorizontalScrollView
                        android:layout_height="0px"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                      	>
                    <EditText
                        android:id="@+id/songProjectText"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:hint="@string/sendtoprojector"
                        android:inputType="textMultiLine"
                        
                        android:minLines="6"
                        android:textSize="12sp"
                        android:isScrollContainer="true" />
</HorizontalScrollView>
                    <HorizontalScrollView
                        android:id="@+id/projectButtons"
                        android:layout_width="wrap_content"
                        android:layout_height="0px"
                        android:layout_weight="1"
                        android:isScrollContainer="true"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="horizontal" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:id="@+id/doProject"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/presenter_button_grouping"
                                android:onClick="doProject"
                                android:orientation="vertical" >

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/sendtoprojector"
                                    android:src="@drawable/action_present" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="@string/update_projector" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/blackScreen"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/presenter_button_grouping"
                                android:onClick="blackoutProject"
                                android:orientation="vertical" >

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/black_screen"
                                    android:src="@drawable/blackout_project" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="@string/black_screen" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/showLogo"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/presenter_button_grouping"
                                android:onClick="showLogo"
                                android:orientation="vertical" >

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/presoShowLogo"
                                    android:src="@drawable/logo_project"
                                    android:text="@string/presoShowLogo" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="@string/presoShowLogo" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/chooseImage1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/presenter_button_grouping"
                                android:orientation="vertical" >

                                <ImageView
                                    android:id="@+id/bgimage1"
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/choose_image1"
                                    android:onClick="chooseImage1" />

                                <ToggleButton
                                    android:id="@+id/toggleButton1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/choose_image1"
                                    android:onClick="switchImage1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="@string/choose_image1" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/chooseImage2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/presenter_button_grouping"
                                android:orientation="vertical" >

                                <ImageView
                                    android:id="@+id/bgimage2"
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/choose_image2"
                                    android:onClick="chooseImage2" />

                                <ToggleButton
                                    android:id="@+id/toggleButton2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/choose_image2"
                                    android:onClick="switchImage2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="@string/choose_image2" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/chooseVideo1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/presenter_button_grouping"
                                android:orientation="vertical" >

                                <VideoView
                                    android:id="@+id/bgvideo1"
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/ic_action_video"
                                    android:contentDescription="@string/choose_video1"/>

                                <ToggleButton
                                    android:id="@+id/toggleVideo1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/choose_video1"
                                    android:onClick="switchVideo1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="@string/choose_video1"
                                    android:onClick="switchVideo1" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/chooseVideo2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/presenter_button_grouping"
                                android:orientation="vertical" >

                                <VideoView
                                    android:id="@+id/bgvideo2"
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/ic_action_video"
                                    android:contentDescription="@string/choose_video2"/>

                                <ToggleButton
                                    android:id="@+id/toggleVideo2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/choose_video2"
                                    android:onClick="switchVideo2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="@string/choose_video2" />
                            </LinearLayout>
                            
                            <LinearLayout
                                android:id="@+id/setMargins"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/presenter_button_grouping"
                                android:onClick="setMargins"
                                android:orientation="vertical" >

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/setmargins"
                                    android:src="@drawable/ic_action_full_screen"
                                    android:text="@string/setmargins" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="@string/setmargins" />
                            </LinearLayout>
                            
                        </LinearLayout>
                    </HorizontalScrollView>

                <LinearLayout
                    android:id="@+id/setList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>
                    
                    <TextView
                        android:id="@+id/beta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/beta" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

<!--    <ListView
            android:id="@+id/drawer_list"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#121222"
            android:choiceMode="singleChoice"
            android:divider="#aaa"
            android:dividerHeight="1dp" />

        <ListView
            android:id="@+id/option_list"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="#121222"
            android:choiceMode="singleChoice"
            android:divider="#aaa"
            android:dividerHeight="1dp" /> -->
            
                    <ExpandableListView
            android:id="@+id/song_list_ex"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="#121222"
            android:choiceMode="singleChoice"
            android:transcriptMode="disabled"
            android:divider="#aaa"
            android:dividerHeight="1dp" />
        <ExpandableListView
            android:id="@+id/option_list_ex"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="#121222"
            android:choiceMode="singleChoice"
            android:transcriptMode="disabled"
            android:divider="#aaa"
            android:dividerHeight="1dp" />
            
    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>