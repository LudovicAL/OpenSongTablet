<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/optionGestureTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="4dp"
        android:drawableLeft="@drawable/ic_arrow_up_drop_circle_outline_yellow_36dp"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/ic_arrow_up_drop_circle_outline_yellow_36dp"
        android:gravity="center"
        android:text="@string/options_options_gestures"
        android:textColor="#ff0"
        android:textSize="22sp" />

    <ScrollView
        android:id="@+id/optionsgesturesscrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/gesturesPedalButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawableLeft="@drawable/ic_pedal_white_36dp"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_pedal_white_36dp"
                android:gravity="center_vertical"
                android:text="@string/options_options_pedal"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/gesturesCustomButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawableLeft="@drawable/ic_fingerprint_white_36dp"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_fingerprint_white_36dp"
                android:gravity="center_vertical"
                android:text="@string/options_options_gestures"
                android:textColor="#fff"
                android:textSize="12sp" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/gesturesMenuSwipeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawableLeft="@drawable/ic_menuswipe_white_36dp"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_menuswipe_white_36dp"
                app:theme="@style/SwitchStyle"
                android:text="@string/options_options_menuswipe"
                android:textColor="#fff"
                android:textSize="12sp"
                app:showText="false" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/gesturesSongSwipeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:drawableLeft="@drawable/ic_swipe_white_36dp"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_swipe_white_36dp"
                app:theme="@style/SwitchStyle"
                android:text="@string/options_options_songswipe"
                android:textColor="#fff"
                android:textSize="12sp"
                app:showText="false" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>