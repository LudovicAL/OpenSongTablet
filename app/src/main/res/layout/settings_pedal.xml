            android:layout_height="wrap_content"
            android:layout_marginBottom="200dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="@string/pedal_instructions" />

            <TextView
                android:id="@+id/midiPedal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="@string/pedal_midi_warning" />

            <TableRow style="@style/DividerLine" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/pedalToggleScrollBeforeSwipeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pedal_scroll_before_move" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/pedalToggleWarnBeforeSwipeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pedal_avoid_repeat" />

            <TableRow style="@style/DividerLine" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/airTurnMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/airTurnLongPress" />

            <LinearLayout
                android:id="@+id/airTurnOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/autoRepeatRationale" />

                <com.garethevans.church.opensongtablet.customviews.MaterialSlider
                    android:id="@+id/autoRepeatCount_Slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="2"
                    android:valueTo="200"
                    android:layout_marginTop="16dp"
                    android:text="@string/autoRepeatCount" />

                <com.garethevans.church.opensongtablet.customviews.MaterialSlider
                    android:id="@+id/autoRepeatTime_Slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="100"
                    android:valueTo="5000"
                    app:stepSize="100"
                    android:text="@string/autorepeat_time" />

            </LinearLayout>

            <TableRow style="@style/DividerLine" />

            <!--BUTTON 1-->
