<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DefaultView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.garethevans.church.opensongtablet.customviews.MaterialTextView
                android:id="@+id/performanceMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/performance_mode"
                android:hint="@string/performance_mode_info" />

            <TableRow style="@style/DividerLine" />

            <com.garethevans.church.opensongtablet.customviews.MaterialTextView
                android:id="@+id/stageMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stage_mode"
                android:hint="@string/stage_mode_info" />

            <TableRow style="@style/DividerLine" />

            <com.garethevans.church.opensongtablet.customviews.MaterialTextView
                android:id="@+id/presenterMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/presenter_mode"
                android:hint="@string/presentation_mode_info" />

            <TableRow style="@style/DividerLine" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>