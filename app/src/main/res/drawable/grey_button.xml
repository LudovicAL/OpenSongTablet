<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#666666" />
      <stroke
          android:width="1dp"
          android:color="#444444" />
      <corners
          android:radius="10dp" />
      <padding
          android:left="20dp"
          android:top="20dp"
          android:right="20dp"
          android:bottom="20dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#666666"
          android:endColor="#444444"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#444444" />
      <corners
          android:radius="10dp" />
      <padding
          android:left="20dp"
          android:top="20dp"
          android:right="20dp"
          android:bottom="20dp" />
    </shape>
  </item>
</selector>