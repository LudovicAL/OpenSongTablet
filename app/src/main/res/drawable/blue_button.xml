<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#0000dd" />
      <stroke
          android:width="1dp"
          android:color="#121266" />
      <corners
          android:radius="2dp" />
      <padding
          android:left="16dp"
          android:top="8dp"
          android:right="16dp"
          android:bottom="8dp" />
    </shape>
  </item>
  <item>
    <shape>
      <solid
          android:color="#0000bb" />
      <stroke
          android:width="1dp"
          android:color="#121266" />
      <corners
          android:radius="2dp" />
      <padding
          android:left="16dp"
          android:top="8dp"
          android:right="16dp"
          android:bottom="8dp" />
    </shape>
  </item>
</selector>