<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
  <item android:state_pressed="true" android:minHeight="0dp"
android:minWidth="0dp">
    <shape>
      <solid
          android:color="#cc0101" />
      <stroke
          android:width="1dp"
          android:color="#770101" />
      <corners
          android:radius="5dp" />
      </shape>
  </item>
  <item android:minHeight="0dp"
android:minWidth="0dp">
    <shape>
      <gradient
          android:startColor="#990101"
          android:endColor="#ee0101"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#880101" />
      <corners
          android:radius="5dp" />
    </shape>
  </item>
</selector>