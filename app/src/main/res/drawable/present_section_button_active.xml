<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#e1f" />
      <stroke
          android:width="1dp"
          android:color="#418" />
      <corners
          android:radius="10dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
      </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#a6b"
          android:endColor="#c9d"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#618" />
      <corners
          android:radius="10dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>