<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#161" />
      <stroke
          android:width="1dp"
          android:color="#161" />
      <corners
          android:radius="5dp" />
      <padding
          android:left="5dp"
          android:top="5dp"
          android:right="5dp"
          android:bottom="5dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#161"
          android:endColor="#151"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#161" />
      <corners
          android:radius="5dp" />
      <padding
          android:left="5dp"
          android:top="5dp"
          android:right="5dp"
          android:bottom="5dp" />
    </shape>
  </item>
</selector>