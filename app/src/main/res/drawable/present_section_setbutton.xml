<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
  <item android:state_pressed="true" android:minHeight="0dp"
android:minWidth="0dp">
    <shape>
      <solid
          android:color="#880101" />
      <stroke
          android:width="1dp"
          android:color="#330101" />
      <corners
          android:radius="5dp" />
      </shape>
  </item>
  <item android:minHeight="0dp"
android:minWidth="0dp">
    <shape>
      <gradient
          android:startColor="#660101"
          android:endColor="#330101"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#440101" />
      <corners
          android:radius="5dp" />
    </shape>
  </item>
</selector>